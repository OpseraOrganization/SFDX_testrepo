<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DiscretionaryLineItemAvoidDiscSpend</fullName>
    <active>false</active>
    <errorConditionFormula>AND ( ISCHANGED( Funding_Amount__c ), ISPICKVAL(Approval_Status__c,&quot;Pending Open&quot;))</errorConditionFormula>
    <errorDisplayField>Funding_Amount__c</errorDisplayField>
    <errorMessage>Funding Amount cannot be changed until Discretionary Account is opened.</errorMessage>
</ValidationRule>
