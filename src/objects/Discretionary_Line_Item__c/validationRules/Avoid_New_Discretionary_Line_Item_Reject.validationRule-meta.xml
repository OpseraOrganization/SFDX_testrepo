<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Avoid_New_Discretionary_Line_Item_Reject</fullName>
    <active>true</active>
    <description>Avoid New Discretionary Line Item Reject</description>
    <errorConditionFormula>ISNEW() &amp;&amp;
OR (ISPICKVAL( Discretionary_Request__r.Approval_Status__c , &quot;Pending Approval&quot;),
ISPICKVAL(Discretionary_Request__r.Approval_Status__c , &quot;Rejected&quot;))</errorConditionFormula>
    <errorDisplayField>Account_Opener_Backup_Email__c</errorDisplayField>
    <errorMessage>The Discretionary Request is in Process or in Rejected Status funding cannot be added.</errorMessage>
</ValidationRule>
