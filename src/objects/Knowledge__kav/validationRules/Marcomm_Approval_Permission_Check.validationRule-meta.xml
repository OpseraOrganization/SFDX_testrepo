<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Marcomm_Approval_Permission_Check</fullName>
    <active>true</active>
    <description>Checks if user can set Marcomm approval</description>
    <errorConditionFormula>IF (AND (ISChanged( Status_Marcom_Review__c ), 
RecordType.DeveloperName=&quot;Knowledge_Article&quot;,
$Permission.Knowledge_Marcomm_Approver = FALSE),TRUE,FALSE)</errorConditionFormula>
    <errorMessage>You are not permitted to set Marcomm approval statuses</errorMessage>
</ValidationRule>
