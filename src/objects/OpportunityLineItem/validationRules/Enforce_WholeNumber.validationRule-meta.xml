<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enforce_WholeNumber</fullName>
    <active>true</active>
    <description>Code workaround to ensure only whole number is entered into a number(10,2) field</description>
    <errorConditionFormula>MOD( Quantity ,1)   &lt;&gt; 0  &amp;&amp;  (Opportunity.RecordTypeId != $Label.Opportunity_BGA_Recordtype) &amp;&amp;  (Opportunity.RecordTypeId  !=  $Label.BGA_OE_Opportunity )</errorConditionFormula>
    <errorDisplayField>Quantity</errorDisplayField>
    <errorMessage>Please enter a whole number</errorMessage>
</ValidationRule>
