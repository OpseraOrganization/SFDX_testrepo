<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BGA_YTD_Sales_Amount__c</fullName>
    <description>This field is created to calculate last month sale in same report</description>
    <externalId>false</externalId>
    <formula>IF(  Today() - Opportunity.CloseDate &lt;= 30 , 0 , TotalPrice)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>BGA Post 30 Days Sales</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Currency</type>
</CustomField>
