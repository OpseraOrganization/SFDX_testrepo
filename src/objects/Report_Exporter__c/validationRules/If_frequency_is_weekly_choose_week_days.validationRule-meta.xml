<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_frequency_is_weekly_choose_week_days</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL( Frequency__c ,&quot;weekly&quot;) ,
 OR(ISBLANK( Weekly_Days__c ),NOT(ISBLANK(Text(Monthly_Day__c)))))</errorConditionFormula>
    <errorMessage>If Frequency is weekly then weekly days should be selected not the monthly day.</errorMessage>
</ValidationRule>
