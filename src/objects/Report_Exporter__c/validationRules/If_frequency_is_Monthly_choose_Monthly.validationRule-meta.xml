<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_frequency_is_Monthly_choose_Monthly</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL( Frequency__c ,&quot;Monthly&quot;) ,
 OR(ISBLANK(Text(Monthly_Day__c)),
NOT(ISBLANK(Weekly_Days__c))))</errorConditionFormula>
    <errorMessage>If Frequency is Monthly then monthly days should be selected not the weekly days.</errorMessage>
</ValidationRule>
