<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>no_child_amendments_for_amendment</fullName>
    <active>true</active>
    <description>no child amendments are allowed if the contract itself is an amendment</description>
    <errorConditionFormula>AND(RecordType.DeveloperName=&apos;Amendment&apos;,!ISBLANK(Parent_Contract__c),Parent_Contract__r.RecordType.DeveloperName=&apos;Amendment&apos;,!ISBLANK( Parent_Contract__r.Parent_Contract__c ))</errorConditionFormula>
    <errorMessage>No amendments are allowed for Amended Contract</errorMessage>
</ValidationRule>
