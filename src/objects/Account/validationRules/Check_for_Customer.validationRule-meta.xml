<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_for_Customer</fullName>
    <active>true</active>
    <errorConditionFormula>IF(AND(Is_Customer__c,  ISBLANK( Demo_Field__c )) , True, False)</errorConditionFormula>
    <errorMessage>This is Customer Account and the demo field should be populated</errorMessage>
</ValidationRule>
