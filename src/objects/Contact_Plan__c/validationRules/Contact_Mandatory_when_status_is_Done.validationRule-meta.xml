<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contact_Mandatory_when_status_is_Done</fullName>
    <active>true</active>
    <description>Resolution_Mandatory_when_status_is_Done</description>
    <errorConditionFormula>AND(ISPICKVAL( Status__c , &apos;Done&apos;) , ISBLANK( Contact_Name__c ) )</errorConditionFormula>
    <errorDisplayField>Resolution__c</errorDisplayField>
    <errorMessage>Please Enter Contact Name</errorMessage>
</ValidationRule>
