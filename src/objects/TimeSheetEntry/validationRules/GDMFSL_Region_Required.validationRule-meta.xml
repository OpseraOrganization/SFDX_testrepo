<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GDMFSL_Region_Required</fullName>
    <active>true</active>
    <description>Region field is required for Burden and Allowances</description>
    <errorConditionFormula>AND(OR( ISPICKVAL(GDMFSL_Classification__c, &apos;Burden&apos;) ,ISPICKVAL(GDMFSL_Classification__c, &apos;Allowance&apos;)),ISPICKVAL(GDMFSL_Region__c, &apos;&apos;))</errorConditionFormula>
    <errorMessage>Region is required for Burden and Allowance</errorMessage>
</ValidationRule>
