<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Competitor_data_required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL (StageName, &apos;Closed Lost&apos;),
text(Win_Loss_Reason_Code__c )!=null,
Primary_Competitor__c =null
)</errorConditionFormula>
    <errorDisplayField>Primary_Competitor__c</errorDisplayField>
    <errorMessage>Please enter Competitor data</errorMessage>
</ValidationRule>
