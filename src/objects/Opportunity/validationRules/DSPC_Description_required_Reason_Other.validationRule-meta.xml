<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DSPC_Description_required_Reason_Other</fullName>
    <active>true</active>
    <description>When Win/Loss reason is &quot;other,&quot; &quot;Other Description&quot; required.</description>
    <errorConditionFormula>AND(ISPICKVAL(Win_Loss_Reason_Code__c,&apos;Other&apos;), RecordTypeId == $Label.DSPC_Opportunity, Description == null)</errorConditionFormula>
    <errorMessage>Please enter a description for Win/Loss Reason as &apos;Other&apos;</errorMessage>
</ValidationRule>
