<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidateOfferWithoutExpectedLoALevel</fullName>
    <active>true</active>
    <description>D-2812 fix- Mandate ExpectedLoALevel for Active Offer on Oppty Update</description>
    <errorConditionFormula>AND( 
NOT(ISNEW()), 
OfferWithoutExpectedLoALevel__c&gt;0, 
OR($RecordType.DeveloperName = &apos;Direct_Record_Type&apos;, $RecordType.DeveloperName = &apos;Indirect_Record_Type&apos;), 
$Profile.Name&lt;&gt;$Label.Data_Loader_Profile_Name 
)</errorConditionFormula>
    <errorMessage>Please populate Expected LoA Level against Active Offers for this Opportunity.</errorMessage>
</ValidationRule>
