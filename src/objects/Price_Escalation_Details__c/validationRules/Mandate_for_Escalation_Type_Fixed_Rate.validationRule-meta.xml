<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandate_for_Escalation_Type_Fixed_Rate</fullName>
    <active>true</active>
    <errorConditionFormula>OR(AND(ISPICKVAL(Escalation_Type__c, &quot;Fixed Rate&quot;), 
ISBLANK(Fixed_Escalation_Percentage__c) 
))</errorConditionFormula>
    <errorDisplayField>Fixed_Escalation_Percentage__c</errorDisplayField>
    <errorMessage>The Fixed Escalation Percentage is required for Escalation Type &quot;Fixed Rate&quot;</errorMessage>
</ValidationRule>
