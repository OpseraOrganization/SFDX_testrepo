<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandate_for_Escalation_Type_Catalog</fullName>
    <active>true</active>
    <errorConditionFormula>OR(AND(ISPICKVAL( Escalation_Type__c, &quot;Catalog&quot;), 
ISPICKVAL(Tier__c,&quot;&quot;) 
))</errorConditionFormula>
    <errorDisplayField>Tier__c</errorDisplayField>
    <errorMessage>The Tier is required for Escalation Type &quot;Catalog&quot;</errorMessage>
</ValidationRule>
