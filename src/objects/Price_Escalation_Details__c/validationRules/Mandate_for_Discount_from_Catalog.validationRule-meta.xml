<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandate_for_Discount_from_Catalog</fullName>
    <active>true</active>
    <errorConditionFormula>OR(AND(ISPICKVAL(Escalation_Type__c, &quot;Discount from catalog price&quot;), 
(ISPICKVAL(Tier__c,&quot;&quot;)|| 
ISBLANK(Discount_Percentage__c)) 
))</errorConditionFormula>
    <errorDisplayField>Discount_Percentage__c</errorDisplayField>
    <errorMessage>The Tier and Discount Percentage is required for Escalation Type &quot;Discount from Catalog&quot;</errorMessage>
</ValidationRule>
