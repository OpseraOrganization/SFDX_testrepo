<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contract_field_as_non_editable</fullName>
    <active>true</active>
    <errorConditionFormula>OR( 
ISCHANGED(Contract__c), 
ISBLANK(Contract__c) 
)</errorConditionFormula>
    <errorDisplayField>Contract__c</errorDisplayField>
    <errorMessage>You are not allowed to remove/change the contract.</errorMessage>
</ValidationRule>
