<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Remaining_Days__c</fullName>
    <description>Value based on RAI Days and Reminder Email Start Date. If either of the value is blank defaulted to 1.</description>
    <externalId>false</externalId>
    <formula>IF(
(NOT(ISNULL(RAI_DAYS__c)) &amp;&amp; NOT(ISNULL(Reminder_Email_Start_Date__c))),
IF(
(VALUE(RAI_DAYS__c) - (TODAY()- Reminder_Email_Start_Date__c) &gt; 1),
VALUE(RAI_DAYS__c) - (TODAY()- Reminder_Email_Start_Date__c),
1),
1
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Remaining Days</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
