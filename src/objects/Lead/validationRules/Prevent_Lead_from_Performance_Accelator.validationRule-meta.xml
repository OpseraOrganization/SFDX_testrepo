<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Lead_from_Performance_Accelator</fullName>
    <active>true</active>
    <description>To Prevent creating Leads from Performance Accelerator Tool</description>
    <errorConditionFormula>AND(
     $Setup.ValidationRuleSettings__c.Disable_Validation_Rules__c = false,
     $User.Id = &apos;0051300000BbHC4&apos; &amp;&amp; $Profile.Name != &apos;System Administrator&apos; &amp;&amp; $Profile.Name &lt;&gt; $Label.API_data_Load_Profile
 )</errorConditionFormula>
    <errorDisplayField>address2nd__c</errorDisplayField>
    <errorMessage>Leads cannot be created from Performance Accelerator Tool</errorMessage>
</ValidationRule>
