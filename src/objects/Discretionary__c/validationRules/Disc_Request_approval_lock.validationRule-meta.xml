<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Disc_Request_approval_lock</fullName>
    <active>false</active>
    <errorConditionFormula>ISNEW() &amp;&amp;
AND (ISCHANGED(Total_Request_Amount_rollup__c),
OR (ISPICKVAL(Approval_Status__c , &quot;Pending Approval&quot;),
ISPICKVAL(Approval_Status__c , &quot;Rejected&quot;))
)</errorConditionFormula>
    <errorMessage>This Discretionary Request is in approval process you cannot change / add Funding Amount.</errorMessage>
</ValidationRule>
