<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Development_Discussion_Date</fullName>
    <active>true</active>
    <description>Require Development Discussion Date Held when Status is change to In Review</description>
    <errorConditionFormula>ISBLANK( Development_Discussion_Held_Date__c ) &amp;&amp;  
ISPICKVAL( Status__c , &quot;In Review (Employee)&quot;)</errorConditionFormula>
    <errorDisplayField>Development_Discussion_Held_Date__c</errorDisplayField>
    <errorMessage>Please enter the date of development discussion.</errorMessage>
</ValidationRule>
