<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Reason_for_Role_Change</fullName>
    <active>true</active>
    <description>Require Reason for change if the Role Category is changed.</description>
    <errorConditionFormula>ISCHANGED(  Role_Category__c  ) &amp;&amp;  ISBLANK( Reason_for_Role_Category_Change__c )</errorConditionFormula>
    <errorDisplayField>Reason_for_Role_Category_Change__c</errorDisplayField>
    <errorMessage>Please enter a Reason for Role Category change.</errorMessage>
</ValidationRule>
