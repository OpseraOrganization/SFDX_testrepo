<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Comments_required_when_status_denied</fullName>
    <active>false</active>
    <errorConditionFormula>AND (ISPICKVAL( Request_Status__c , &apos;Denied&apos;),ISBLANK( Comments__c ))</errorConditionFormula>
    <errorDisplayField>Comments__c</errorDisplayField>
    <errorMessage>Comments field is required field when status changed to denied</errorMessage>
</ValidationRule>
