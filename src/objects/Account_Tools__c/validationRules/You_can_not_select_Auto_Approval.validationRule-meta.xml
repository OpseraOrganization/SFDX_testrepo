<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>You_can_not_select_Auto_Approval</fullName>
    <active>false</active>
    <description>you can not select Auto approval option</description>
    <errorConditionFormula>AND( OR(ISPICKVAL(PRIORVALUE(Authorization_Method__c), &quot;Super User and HON approval&quot;),ISPICKVAL(PRIORVALUE(Authorization_Method__c), &quot;HON approval&quot;)) 

,ISPICKVAL(Authorization_Method__c, &quot;Auto-approve&quot;) )</errorConditionFormula>
    <errorDisplayField>Authorization_Method__c</errorDisplayField>
    <errorMessage>You can not select &quot;Auto-approve&quot; if tool requires &quot;HON Approval&quot;</errorMessage>
</ValidationRule>
