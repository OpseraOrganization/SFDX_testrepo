<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VOC_WeightSum</fullName>
    <active>false</active>
    <description>Sum of weights should be equal to 100</description>
    <errorConditionFormula>and    (                   $RecordType.DeveloperName ==&apos;VOC&apos;,(NULLVALUE(Development_Weight__c, 0) + NULLVALUE(Quality_Weight__c, 0)+
NULLVALUE(Reliability_Weight__c, 0)+NULLVALUE(Responsiveness_Weight__c,0)+
NULLVALUE(Value_Weight__c, 0)+NULLVALUE(Service_Support_Weight__c, 0)+
NULLVALUE(Delivery_Weight__c,0) )  !=100/100  )</errorConditionFormula>
    <errorMessage>Sum of weights should be equal to 100</errorMessage>
</ValidationRule>
