<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Disable_account_change_on_accepted_quote</fullName>
    <active>true</active>
    <errorConditionFormula>AND(OR(
ISCHANGED(Apttus_QPConfig__BillToAccountId__c),
ISCHANGED(Apttus_QPConfig__ShipToAccountId__c), ISCHANGED(Apttus_Proposal__Account__c)
), 
ISPICKVAL(Apttus_Proposal__Approval_Stage__c, &apos;Accepted&apos;))</errorConditionFormula>
    <errorMessage>You cannot change Account, Ship To, Bill To after quote/proposal has been accepted</errorMessage>
</ValidationRule>
