<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Do_not_allow_On_Hold_on_Case_Creation</fullName>
    <active>true</active>
    <description>For Technical issue Cases do not allow On-Hold status on Case creation</description>
    <errorConditionFormula>ISNEW() &amp;&amp; OR(RecordTypeId=$Label.Technical_Issue,$RecordType.DeveloperName =$Label.AeroCustomerSupportRecTypeName) &amp;&amp;   ISPICKVAL(Status , &apos;On Hold&apos;) &amp;&amp; $Profile.Name &lt;&gt; $Label.API_data_Load_Profile</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Case cannot be on On-Hold status while creation</errorMessage>
</ValidationRule>
