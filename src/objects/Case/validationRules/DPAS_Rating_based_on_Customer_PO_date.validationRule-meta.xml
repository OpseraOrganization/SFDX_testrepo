<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DPAS_Rating_based_on_Customer_PO_date</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL( DPAS_Rating__c , &apos;DX&apos;)  ||  ISPICKVAL( DPAS_Rating__c , &apos;DO&apos;))  &amp;&amp; isnull( Date_Customer_PO_Received__c ) &amp;&amp; $Profile.Name &lt;&gt; $Label.API_data_Load_Profile</errorConditionFormula>
    <errorMessage>Date Customer PO Received field should not be blank when DPAS Rating is selected</errorMessage>
</ValidationRule>
