<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FalconConnect_Priority_Mandatory</fullName>
    <active>true</active>
    <description>Checks to make both the Priority field is populated</description>
    <errorConditionFormula>$Profile.Name &lt;&gt; $Label.API_data_Load_Profile
 &amp;&amp;  
AND (RecordType.Name=&apos;FalconConnect&apos;, ISBLANK(Text(Priority)))</errorConditionFormula>
    <errorMessage>The Priority field must be populated!</errorMessage>
</ValidationRule>
