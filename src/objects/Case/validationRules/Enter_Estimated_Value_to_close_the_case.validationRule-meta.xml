<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enter_Estimated_Value_to_close_the_case</fullName>
    <active>true</active>
    <description>Enforce the user to enter the Estimated Value field before closing the case. This is applicable only for the &quot;	Leads Transfer to Distributors&quot; record type</description>
    <errorConditionFormula>($RecordType.Name =&apos;Leads Transfer to Distributors&apos;  )&amp;&amp; ( ISPICKVAL(Status,&apos;Close-Lost&apos;) || ISPICKVAL(Status,&apos;Close-Won&apos;) ) &amp;&amp; (ISBLANK(Estimated_Value__c)) &amp;&amp; $Profile.Name &lt;&gt; $Label.API_data_Load_Profile</errorConditionFormula>
    <errorDisplayField>Estimated_Value__c</errorDisplayField>
    <errorMessage>Please enter Estimated Value to Close the Case</errorMessage>
</ValidationRule>
