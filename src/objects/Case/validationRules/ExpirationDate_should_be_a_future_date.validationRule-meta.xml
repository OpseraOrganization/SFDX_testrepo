<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ExpirationDate_should_be_a_future_date</fullName>
    <active>true</active>
    <description>Quotes Expiration date should be a date in the future.</description>
    <errorConditionFormula>AND(ISCHANGED(Expiration_Date__c) ,Expiration_Date__c &lt; NOW(),$RecordType.Name ==&apos;Quotes&apos;,$Profile.Name &lt;&gt; $Label.API_data_Load_Profile)</errorConditionFormula>
    <errorDisplayField>Expiration_Date__c</errorDisplayField>
    <errorMessage>Please enter a future date.</errorMessage>
</ValidationRule>
