<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Update_Sales_Order_Number_field</fullName>
    <active>true</active>
    <description>error msg if sales order number field is blank on closing the case</description>
    <errorConditionFormula>AND($Profile.Name &lt;&gt; $Label.API_data_Load_Profile,$RecordType.Name=&quot;ISS Orders&quot;, ISBLANK(Sales_Order_Number__c),  ISPICKVAL( Status , &quot;Done&quot;))</errorConditionFormula>
    <errorMessage>Please update Sales Order Number before closing the Case</errorMessage>
</ValidationRule>
