<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Employee_ContactRole_to_be_mandatory</fullName>
    <active>false</active>
    <description>Employee ContactRole  and Employee Number to be mandatory</description>
    <errorConditionFormula>and(Contact_Is_Employee__c =true,
or( ispickval(Employee_Contact_Role__c ,&apos;&apos;) ,
isblank(Employee_Number__c ))

)</errorConditionFormula>
    <errorMessage>Please enter Employee ContactRole and Employee Number</errorMessage>
</ValidationRule>
