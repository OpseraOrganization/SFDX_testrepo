<apex:page id="thePage" standardController="Template_Tools__c" extensions="EditTemplateTools">
 <script language="javascript" type="text/javascript">
 function validate(){
     //alert(document.getElementById('thePage:theForm:thePageBlock:thePageBlockSec:toolSection:toolName').value);
     //alert(document.getElementById('thePage:theForm:thePageBlock:thePageBlockSec:authSec:authorizationMethod').value);
     if(document.getElementById('thePage:theForm:thePageBlock:thePageBlockSec:toolSection:toolName').value=='-None-'){
         alert('Please select Tool Name');
         return false;
     }else if(document.getElementById('thePage:theForm:thePageBlock:thePageBlockSec:authSec:authorizationMethod').value=='-None-'){
          alert('Please select Authorization Method');
         return false;
     }else{
         return true;
     }
 }     
 </script>
 <apex:sectionHeader title="Template Tools Edit" subtitle="Edit Template Tools" />
 <apex:form id="theForm"   > 
 <apex:pageBlock id="thePageBlock" title="Template Tools Edit" mode="edit">
     <apex:pageBlockButtons >
         <apex:commandButton value="Save" action="{!save}" onclick="return validate()" />
         
         <apex:commandButton value="Cancel" action="{!cancel}" immediate="true"/>
     </apex:pageBlockButtons>
     <apex:pageBlockSection id="thePageBlockSec" title="Information" columns="2">
     <!--apex:pageBlockSectionItem> 
         <apex:outputLabel value="Template Tools Name"></apex:outputLabel>
         <apex:inputField value="{!Template_Tools__c.name}" required="true"/>
      </apex:pageBlockSectionItem> -->
      <apex:pageBlockSectionItem id="toolSection" >
         Tool Name <font color="red">|</font>
         <apex:selectList id="toolName" value="{!toolName}" size="1" required="true" >
             <apex:actionSupport event="onchange" rerender="authorizationMethod"/>
             <apex:selectOptions value="{!toolList}"></apex:selectOptions>
         </apex:selectList>
      </apex:pageBlockSectionItem>
      <apex:pageBlockSectionItem id="templateSec" >
         <apex:outputLabel value="Template Name"></apex:outputLabel>
         <apex:outputField value="{!Template_Tools__c.Portal_Access_Templates__c}" />
         
       </apex:pageBlockSectionItem>
        
           <apex:pageBlockSectionItem id="authSec" >
         Authorization Method <font color="red">|</font>
         <apex:selectList id="authorizationMethod" value="{!authorizationMethod}" size="1" >
             <apex:selectOptions value="{!authorizationList}"></apex:selectOptions>
         </apex:selectList>
       </apex:pageBlockSectionItem>
     </apex:pageBlockSection>
 </apex:pageBlock>
 <apex:inputHidden id="templateName" value="{!Template_Tools__c.Portal_Access_Templates__c}"/>
 </apex:form>
</apex:page>