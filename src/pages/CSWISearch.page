<apex:page standardController="Customer_Specific_Work_Instruction__c" extensions="CSWISearch" showHeader="true" sidebar="false" tabStyle="CSWI_Search__tab">

<style>
    .labelstyle {
        font-size:12px;
    }
</style>

 <apex:form >
 <div style="position:relative;">
            <apex:outputpanel id="mainpanel" >
                <apex:actionstatus id="status">
                    <apex:facet name="start">
                        <div class="waitingSearchDiv" id="el_loading" style="background-color: #FFFFFF; height: 100%; width:100%; opacity: 0.95">
                            <div class="waitingHolder" style="top:74.2px; width: 100%; background-color: #FFFFFF;  border:0px;">
                                <img class="waitingImage" src="{!$Resource.CSWI_Loader}" title="Please Wait..."/>
                            </div>
                        </div>
                    </apex:facet>
                </apex:actionstatus>
                <apex:pagemessages />
    <apex:outputPanel id="src1" rendered="{!if(WorkInstructions.size=0,true,false)}" style="color: red" >
    <apex:pageBlock id="mainblock" >
      <apex:pageBlockSection >
        <apex:pageBlockSectionItem >
          <apex:outputLabel value="No records to display for this search criteria. Try a different search criteria." style="color: red"></apex:outputLabel>
           </apex:pageBlockSectionItem>
 </apex:pageBlockSection>
 </apex:pageBlock>
 </apex:outputPanel>
 
 <apex:outputPanel rendered="{!(!showresult)}">
   <apex:pageBlock Title="R&O Quotes Customer Specific Work Instructions" mode="Edit"  >
   
   <apex:pageBlockSection columns="3" >
   
    <apex:pageBlockSectionItem >
    <apex:outputLabel styleClass="labelstyle" value="Customer Name Keyword"></apex:outputLabel>
    <apex:inputText title="Keywords" id="keywords" value="{!Keywords}" styleClass="span12" />
    </apex:pageBlockSectionItem>

    <apex:pageBlockSectionItem >
    <apex:outputLabel styleClass="labelstyle" value="Customer Code"></apex:outputLabel>
    <apex:inputText title="Keyword1" id="keyword1" value="{!Keyword1}" styleClass="span12" />
    </apex:pageBlockSectionItem>    
    
    
   <!-- <apex:pageBlockSectionItem > 
    <apex:outputLabel styleClass="labelstyle" value="Customer Code"></apex:outputLabel>
     <apex:inputField value="{!SearchRecord.Customer_Code__c}"  Label="Customer Code"/> 
     </apex:pageBlockSectionItem> -->
    
    </apex:pageBlockSection>  
    
    <apex:pageBlockButtons location="bottom" >
    <apex:commandButton action="{!searchform}" value="Search" rerender="mainpanel" status="status"/>
     </apex:pageBlockButtons> 
       
   </apex:pageBlock>  
  </apex:outputPanel>

 <apex:outputPanel id="resultpanel" rendered="{!showresult}"> 
   <apex:pageBlock id="myblock" >

         <apex:pageBlockTable value="{!WorkInstructions}" var="c" id="pgblktab">
         
                 <apex:column >
                     <apex:facet name="header">   
                         <apex:commandLink action="{!ViewData}" value="Name{!IF(sortExpression=='name',IF(sortDirection='ASC',' ↓',' ↑'),'')}" reRender="myblock" status="status" id="cmdSort">
                             <apex:param value="name" name="column" assignTo="{!sortExpression}" ></apex:param>
                         </apex:commandLink>
                     </apex:facet>
                     <apex:outputfield value="{!c.name}"/>
                 </apex:column> 
                 
                 <apex:column >
                     <apex:facet name="header">   
                         <apex:commandLink action="{!ViewData}" value="Account Name{!IF(sortExpression=='Customer_Name__c',IF(sortDirection='ASC',' ↓',' ↑'),'')}" reRender="myblock" status="status" id="cmdSort1">
                             <apex:param value="Customer_Name__c" name="column" assignTo="{!sortExpression}" ></apex:param>
                         </apex:commandLink>
                     </apex:facet>
                     <apex:outputLink value="/apex/CSWISearch_Details?id={!c.id}" target="_blank">{!c.Customer_Name__c}</apex:outputLink>
                 </apex:column> 
         
                 <apex:column >
                     <apex:facet name="header">   
                         <apex:commandLink action="{!ViewData}" value="Customer Code{!IF(sortExpression=='Customer_Code__c',IF(sortDirection='ASC',' ↓',' ↑'),'')}" reRender="myblock" status="status" id="cmdSort2">
                             <apex:param value="Customer_Code__c" name="column" assignTo="{!sortExpression}" ></apex:param>
                         </apex:commandLink>
                     </apex:facet>
                         <apex:outputfield value="{!c.Customer_Code__c}"/>
                 </apex:column> 
         
                 <apex:column >
                     <apex:facet name="header">   
                         <apex:commandLink action="{!ViewData}" value="SFDC Contract ID{!IF(sortExpression=='Contractt_ID__c',IF(sortDirection='ASC',' ↓',' ↑'),'')}" reRender="myblock" status="status" id="cmdSort3">
                             <apex:param value="Contractt_ID__c" name="column" assignTo="{!sortExpression}" ></apex:param>
                         </apex:commandLink>
                     </apex:facet>
                    
                       <apex:outputfield value="{!c.Contract_Number__c}"/>
                 </apex:column> 
                 
                     <!--   <apex:column id="col1" value="{!c.name}" headerValue="CSWI"  width="150px"/> 
                        <apex:column id="col2"  headervalue="Account Name" width="150px"  > 
                        <apex:outputLink value="/apex/CSWISearch_Details?id={!c.id}" target="_blank">{!c.Customer_Name__c}</apex:outputLink>
                        </Apex:column> 
                        <apex:column id="col3" value="{!c.Customer_Code__c}"  headerValue="Customer Code" width="150px" /> 
                        <apex:column id="col4" value="{!c.Contractt_Id__c}" headerValue="Contract ID" width="150px"/> -->
                         
         </apex:pageBlockTable>
         
     <apex:pageBlockButtons >
         <apex:commandButton value="Back" action="{!backMethod}"/>
     </apex:pageBlockButtons>  
     <apex:panelGrid columns="2">
                    <apex:commandlink action="{!con.previous}" status="status" rerender="myblock" rendered="{!hasPrevious}" value="< Previous"/> 
                    <apex:commandlink action="{!con.next}" status="status" rerender="myblock" rendered="{!hasNext}" value="Next >"/> 
                    </apex:panelGrid>    
   </apex:pageBlock> 
  
 </apex:outputPanel>
 </apex:outputPanel>
 </div>
 </apex:form>
   <apex:insert name="footer">
        <c:honeywellFooter1 />
</apex:insert>
</apex:page>