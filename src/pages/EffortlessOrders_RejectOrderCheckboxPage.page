<apex:page standardController="Case" extensions="EffortlessOrders_RejectOrderCheckboxClas" id="pid">
    <apex:form id="formid">        
        <style type="text/css">
           .header{
                color: #000;
                font-size: 2em;
                font-weight: normal;
            }
        </style> 
        <apex:outputPanel id="jspanel"> 
        <script type="text/javascript">  
            var casid = '{!Casowidsub}';
            var csid = '{!caseid}';
            function  onControllerReturn(){ 
                if(document.getElementById('pid:formid:pgid:pbsecid:mtaddid').checked == false && document.getElementById('pid:formid:pgid:pbsecid:mshid').checked == false &&
                   document.getElementById('pid:formid:pgid:pbsecid:shtid').checked == false && document.getElementById('pid:formid:pgid:pbsecid:mpoid').checked == false &&
                   document.getElementById('pid:formid:pgid:pbsecid:mpartid').checked == false && document.getElementById('pid:formid:pgid:pbsecid:mquid').checked == false){
                    alert('Select atleast one Reason for Rejection or click Cancel button to move back to Case detail Page.');
                } 
                else if(casid=='00G' && '{!$Profile.Name}' != 'API DATA LOAD'){          
                    alert('This Case cannot be Closed until it is assigned to an individual owner.');                    
                }
            } 
        </script>
        </apex:outputPanel><br/><br/><br/>
        <img src="/s.gif" alt="Case" class="pageTitleIcon" title="Case"/>
        <font class="header"> Select the reasons to Reject the Order and click on Apply</font><br/><br/>           
        <apex:pageBlock id="pgid">
            <apex:pageBlockSection id="pbsecid" title="Reject Reasons" columns="1" collapsible="false">                
                <apex:inputCheckbox id="mtaddid" value="{!MTAdd}" label="Missing Sold-To Address"/>
                <apex:inputCheckbox id="mshid" value="{!MShTAdd}" label="Missing Ship-To Address"/>
                <apex:inputCheckbox id="shtid" value="{!ShTPO}" label="Ship-To is PO Box"/>
                <apex:inputCheckbox id="mpoid" value="{!MPO}" label="Missing PO Number"/>
                <apex:inputCheckbox id="mpartid" value="{!MPart}" label="Missing Part Number"/>
                <apex:inputCheckbox id="mquid" value="{!MQuan}" label="Missing Quantity"/>
           </apex:pageBlockSection>
           <apex:pageBlockButtons >
               <!--<apex:actionFunction name="STNum" action="{!getSelected}" reRender="jspanel"/>-->
               <apex:commandButton value="Apply" onclick="onControllerReturn();" action="{!getSelected}" reRender="jspanel"/>
               <apex:commandButton value="Cancel" action="{!Cancel}"/>
           </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>     
</apex:page>