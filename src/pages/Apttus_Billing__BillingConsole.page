                <apex:outputPanel styleClass="aptConsoleWrapper" layout="block">
                   <apex:outputPanel styleClass="aptConsoleItem"  layout="block">
                      <apex:image url="{!URLFOR($Resource.Apttus_Billing__BillingConsoleIcons, 'BillingConsoleIcons/BillingConsole-Setup.JPG')}" styleClass="aptConsoleImage"/>
                      <apex:outputPanel styleClass="aptConsoleItemTitle" layout="block">{!$Label.apttus_billing__billingsetup}</apex:outputPanel>
                      <apex:outputPanel styleClass="aptConsoleItemLabel" layout="block"><br />

                         <a id="theCommandLink1" class="aptConsoleItemLink" href="{!$Page.BillingSystemProperties}">{!$ObjectType.BillingSystemProperties__c.label}</a><br /><br />
                         <a id="theCommandLink2" class="aptConsoleItemLink" href="{!$Page.SystemProperties}">
                         {!$Label.MergeServerAPIcredentials} </a><br /><br />
                         <a id="theCommandLink3" class="aptConsoleItemLink" href="{!BillingPreferenceUrl}">{!$ObjectType.Apttus_Config2__BillingPreference__c.labelPlural}</a><br /><br />
