                      </apex:outputPanel>
                   </apex:outputPanel>

                    <apex:outputPanel styleClass="aptConsoleItem" layout="block">
                      <apex:image url="{!URLFOR($Resource.Apttus_Billing__BillingConsoleIcons, 'BillingConsoleIcons/BillingConsole-Templates.JPG')}" styleClass="aptConsoleTemplateAndInvoiceImage" />
                      <apex:outputPanel styleClass="aptConsoleItemTitle1" layout="block">{!$Label.apttus_billing__doctemplates}</apex:outputPanel>
                      <apex:outputPanel styleClass="aptConsoleItemLabel" layout="block"><br />
                         <a id="invoiceTemplateCommandLink" class="aptConsoleItemLink" href="{!$Page.TemplateListView}?viewName=Invoice">{!$ObjectType.Invoice__c.label} {!$Label.Templates}</a> <br /><br />
                         <a id="creditMemoTemplateCommandLink" class="aptConsoleItemLink" href="{!$Page.TemplateListView}?viewName=Credit Memo">{!$ObjectType.CreditMemo__c.label} {!$Label.Templates}</a> <br /><br />
                         <a id="invoiceStatementTemplateCommandLink" class="aptConsoleItemLink" href="{!$Page.TemplateListView}?viewName=Invoice Statement">{!$Label.InvoiceStatement}</a>
                      </apex:outputPanel>
                    </apex:outputPanel>

                    <apex:outputPanel styleClass="aptConsoleItem" layout="block" rendered="{!$ObjectType.EmailTemplate.accessible}">
                      <apex:image url="{!URLFOR($Resource.Apttus_Billing__BillingConsoleIcons, 'BillingConsoleIcons/BillingConsole-Email&Communication.JPG')}" styleClass="aptConsoleImageEmailCommunication" />
                      <apex:outputPanel styleClass="aptConsoleItemTitle1" layout="block">{!$Label.apttus_billing__emailcommunication}</apex:outputPanel>
                      <apex:outputPanel styleClass="aptConsoleItemLabel" layout="block"><br />
