                    <apex:outputPanel styleClass="aptConsoleItem" layout="block">
                      <apex:image url="{!URLFOR($Resource.Apttus_Billing__BillingConsoleIcons, 'BillingConsoleIcons/BillingConsole-Payments.JPG')}" styleClass="aptConsolePaymentImage"/>
                      <apex:outputPanel styleClass="aptConsoleItemTitle" layout="block">{!$Label.apttus_billing__payments}</apex:outputPanel>
                      <apex:outputPanel styleClass="aptConsoleItemLabel" layout="block"><br />
                        <a id="theCommandLink1" class="aptConsoleItemLink" href="{!PaymentMethodUrl}">
                        {!$ObjectType.PaymentMethod__c.labelPlural}</a>
                      </apex:outputPanel>
                   </apex:outputPanel>
               </apex:outputPanel>
