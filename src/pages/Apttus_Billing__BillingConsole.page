        function redirectToHomePage() {
            window.location.href = '/home/home.jsp';
        }
    </script>

    <apex:outputPanel layout="block" styleClass="aptRoundedDiv">
        <apex:outputPanel layout="block" styleClass="aptConsoleTitleImage">
      <apex:image url="{!URLFOR($Resource.Apttus_Billing__BillingConsoleIcons, 'BillingConsoleIcons/Apttus.JPG')}" onclick="redirectToHomePage()"/>
        <apex:outputLabel styleClass="aptConsoleTitleLabel">{!$Label.apttus_billing__billingmanagementsetupconsole}</apex:outputLabel>
      </apex:outputPanel>
    
