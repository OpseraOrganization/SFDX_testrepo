        function mailcheckshow() {
            el = document.getElementById("mailsection");
            el.style.visibility = (el.style.visibility == "visible") ? "hidden" : "visible"; 
            document.getElementById('j_id0:j_id5:emailname').value= "";
            document.getElementById('j_id0:j_id5:emailsubject').value= "";
            document.getElementById('j_id0:j_id5:emailbody').value= ""; 
        }
        function fieldvalidate() {
            var nam = document.getElementById('j_id0:j_id5:emailname').value;
            var sub = document.getElementById('j_id0:j_id5:emailsubject').value;
            var ebody = document.getElementById('j_id0:j_id5:emailbody').value; 
            if (nam == '') {
                alert('Please enter your Name');
                return false;
            }
            if (sub == '') {
                alert('Please enter a Subject');
                return false;
            }
            if (ebody == '') {
                alert('Please enter your Comments');
                return false;
            }   
        }
    </script>   
