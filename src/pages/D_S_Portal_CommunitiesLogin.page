    <body style="background:#ffffff;line-height: 0 em;">   
        <div class="container-fluid">
            <div class="header-info">                
                <img src="{!$Resource.honeywell_toplogo_ds}" />
            </div>

            <!-- ASDF  -->            

            <div class="row-fluid login-form ds">
                <div style="float: right; text-align: right;" class="span6">
                    <img src="{!$Resource.ds_partner_connect}" style="margin-right: 30px; margin-top: 90px;" />
                    <img src="{!$Resource.d_s_partner_connect_descr}" style="margin-right: 30px; position: relative; margin-top: 35%;" />
                </div>
                <div style="float: right; margin-left: 0px;" class="span6">
                    <div class="semitrans">   
                         <span id="errorid" class="errordiv"><small style="color:red; size:12px;">Your login attempt has failed. The username or password may be incorrect.</small></span><br/>                      
                        <h3>Partner Login<br/>
                        <small>Please login using your Honeywell ID and Password.<!-- <a href="javascript:showPopUp(\'https://qcwa.honeywell.com/user/honeywellid.html\')">Help</a> --></small><br/></h3>
                        <form action="https://qcwa.honeywell.com/login.do" method="post" name="qcwa_login" class="form-horizontal">
                            <div class="control-group">
                                <label for="username" class="control-label">
                                    <h4>Honeywell ID</h4>
                                </label>
                                <div class="controls">
                                    <input type="text" tabindex="1" name="username" placeholder="Honeywell ID" id="username" class="input-block-level"/>
                                    <span class="help-block">
                                    <a target="_new" href="https://qcwa.honeywell.com/profile/RetrieveUserID.jsp">Forgot your ID?</a>
                                    </span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="password" class="control-label">
                                    <h4>Password</h4>
                                </label>
                                <div class="controls">
                                    <input type="password" tabindex="2" name="password" placeholder="Password" id="password" class="input-block-level"/>
                                    <input type="hidden" name="appid" value="36530" />
                                    <span class="help-block">
                                        <a target="_new" href="https://qcwa.honeywell.com/profile/ForgotPassword.jsp" data-toggle="modal">Forgot your Password?</a>
                                    </span>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" name="remhonid"/> Remember my ID on this computer
                                    </label>
                                        <button tabindex="3" type="submit" class="btn btn-block btn-danger">Sign in <i class="icon-chevron-right icon-white"></i></button>
                                    <label><a class="linktext" target="_blank" href="https://cwa.honeywell.com/profile/RegisterUser.jsp?appid=2812" tabindex="8">Register for a Honeywell ID</a></label>
                                    <label><a class="linktext" target="_blank" href="https://cwa.honeywell.com/profile" tabindex="9" >Manage your User Profile</a></label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <span style="float:right">
                <apex:outputtext value="Having trouble Logging in?"/>
                <a href="javascript:;" onclick="mailcheckshow()"> Contact us</a>
            </span>
            <div id="mailsection">
                 <apex:form >
                    <div class="innerdiv ">
                        <table>
                            <td>
                                <apex:outputtext style="font-size:12px;font-weight:Bold;color:#666464;" value="Your Name"/><br/>
                                <apex:inputtext id="emailname" style="height: 18px; width: 210px;" value="{!enteredname}"/> <br/>
                                <apex:outputtext style="font-size:12px;font-weight:Bold;color:#666464;" value="Subject"/><br/>
                                <apex:inputtext id="emailsubject" style="height: 18px; width: 210px;" value="{!Subject}"/> <br/>
                                <apex:outputtext style="font-size:12px;font-weight:Bold;color:#666464;" value="Comments"/><br/>
                                <apex:inputtextarea id="emailbody" style="height: 76px; width: 266px;" value="{!mailbody}"/> <br/> <br/>
                                <apex:commandButton value="Send" onclick="return(fieldvalidate());" action="{!sendMail}"/>
                                <apex:commandButton value="Cancel" onclick="mailcheckshow()"/>
                            </td>
                        </table>
                    </div>
                </apex:form>    
            </div>
