    }
});



$(document).ready(function () {
    //code for working of - Home Screen shortcut
    if (("standalone" in window.navigator) && window.navigator.standalone) {
    // For iOS Apps
    $('a').on('click', function(e){
          e.preventDefault();
          var new_location = $(this).attr('href');
          if (new_location != undefined && new_location.substr(0, 1) != '#' && $(this).attr('data-method') == undefined){
            window.location = new_location;
          }
        });
    }
    
    if ($('html').is('.ie8')) {
        $('#ie8mob-hm').css("width", $('.voc-hdr-img').width() );
        
    }

  /*  if(window.location.href.indexOf("errcode") > -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#ErrorAlert').modal({
          show:true,
          closeOnEscape: true
      });
    }
    else {
       $("#ErrorAlert").hide();        
    }
   */ 
    // Added for error url conditions
    var thisURL = document.URL;
    if(thisURL.indexOf("cwa01") != -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#ErrorAlert').modal({
          show:true,
          closeOnEscape: true
      });    
    }
    if(thisURL.indexOf("cwa02") != -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#AccountLockedAlert').modal({
          show:true,
          closeOnEscape: true
      });    
    }
    if(thisURL.indexOf("cwa03") != -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#PasswordExpiredAlert').modal({
          show:true,
          closeOnEscape: true
      });    
    }
    if(thisURL.indexOf("cwa04") != -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#NoAppAccessAlert').modal({
          show:true,
          closeOnEscape: true
      });    
    }
    if(thisURL.indexOf("cwa06") != -1) {
        $(".voc-loader").hide();    //  To Show loader
        $('#AppErrorAlert').modal({
          show:true,
          closeOnEscape: true
      });    
    }
});



function hideblock() {
     $("#ErrorAlert").hide();    
}

</script>

