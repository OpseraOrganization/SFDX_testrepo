<!-- Error Popup alert begins-->
    <!-- Invalid ID/Password(error code 1)-->
    <div id="ErrorAlert" class="modal fade bs-example-modal-sm in" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
