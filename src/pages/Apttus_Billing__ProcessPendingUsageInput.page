 <apex:page standardController="Apttus_Billing__UsageInput__c" extensions="Apttus_Billing.ProcessPendingUsageInputContoller" 
 			showHeader="true" sidebar="true" standardStylesheets="true" 
 			cache="false" tabstyle="Apttus_Billing__UsageInput__c" >

    <apex:sectionHeader title="{!$ObjectType.Apttus_Billing__UsageInput__c.label}" subtitle="{!$Label.apttus_billing__rate}"/>
    <apex:form >        
        <apex:pageBlock id="idHeader" mode="detail" title="{!$Label.apttus_billing__process} {!$Label.apttus_billing__usagerating}" rendered="true">
        	<apex:messages />
            <apex:pageBlockButtons location="both">
                <apex:commandButton action="{!processPendingUsageInput}" value="{!$Label.apttus_billing__process}" 
	            					disabled="{!!canLoadedInputBeProcessed}"
	            					status="processStatus" />
                <apex:commandButton value="{!$Label.apttus_config2__back}" action="{!backToUsageInput}" immediate="true"/>
                <apex:actionStatus id="processStatus" >
	               	<apex:facet name="start">
	                	<img src="{!URLFOR($Resource.Apttus_Config2__Image_LoadingIcon)}"/>  
					</apex:facet>
				</apex:actionStatus>
            </apex:pageBlockButtons> 
            
            <apex:pageBlockSection id="id2" columns="1" collapsible="false" >
                <apex:outputText value="{!processPendingPageMessage}" />
            </apex:pageBlockSection> 
        </apex:pageBlock>
    </apex:form>

</apex:page>