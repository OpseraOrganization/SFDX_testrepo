<apex:page controller="OVOC_myVOC_Controller" renderAs="pdf" applyBodyTag="false" cache="true" standardStylesheets="false">   <!-- applyBodyTag="false" remove-- showHeader="false" -->
    <head>
        <style>  
            @page {
            /* Landscape orientation */
            size:landscape;
            }
        </style>
    </head>
    <style> 
    .tablehead {
        border: 1px solid;
        background-color: #99C68E;
        //background-color: red;
        font-weight: bold;
        font-size: 100%;
    }
    .odd {
         border-bottom: 1px solid #000;
         background-color: #ECE5B6;
         padding: 1px 1px 2px 2px;
         font-size: 100%;
    }
    .even {
        border-bottom: 1px solid #000;
        padding: 1px 1px 2px 2px;
        font-size: 100%;
    }
</style>     

     <apex:dataTable value="{!vocMainListForPage}" var="v" id="theTable" styleClass="tablehead" 
     rowClasses="odd,even" border="0.1px" style="font-size: 40%" columns="19">
            <apex:column > 
                <apex:facet name="header">VOC</apex:facet>
                <apex:outputText value="{!if(v.VOC__c == null,if(v.RecordTypeId == $Label.OVOC_RecType_Id,'OVOC-Draft','VOC-Draft'),v.VOC__c)}"/>
            </apex:column>
            <apex:column >
                <apex:facet name="header">VOC Date</apex:facet>
                <apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
                    <apex:param value="{!v.VOC_Date__c}" /> 
                </apex:outputText>
              <!--  <apex:outputText value="{!v.VOC_Date__c}"/> -->
            </apex:column>
            <!-- Addeed to display Status starts-->
            <apex:column >
                <apex:facet name="header">VOC Status</apex:facet>
                <apex:outputText value="{!v.Status__c}"/>
            </apex:column>
            <!-- Addeed to display Status ends-->
            <apex:column >
                <apex:facet name="header">VOC Collection</apex:facet>
                <apex:outputText value="{!v.VOC_Collection__c}"/>
            </apex:column>
            <apex:column >
                <apex:facet name="header">VOC Title</apex:facet>
                <span style="display:block; width:40px; word-wrap:break-word;"><apex:outputText value="{!v.VOC_Title__c}"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Honeywell Lead</apex:facet>
                <apex:outputText value="{!v.Honeywell_Lead_Formula__c}"/>
               <!-- <apex:outputText value="{!IF(v.Honeywell_Lead__c != null,v.Honeywell_Lead__c,v.Honeywell__r.Name)}"/> -->   <!-- Changed from Honeywell__r.Name-->
            </apex:column>
            <apex:column >
                <apex:facet name="header">Product Family</apex:facet>
                <span style="display:block; width:100px; word-wrap:break-word;"><apex:outputText value="{!v.Product_Family__c}" style="word-wrap:break-word;"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Product Name</apex:facet>
                <apex:outputText value="{!v.Product_Name__c}"/>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Platform</apex:facet>
                <apex:outputText value="{!v.Platform__r.name}"/>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Company Name</apex:facet>
                <apex:repeat value="{!v.VOC_Customer_Names__r}" var="c" >
                    <span style="display:block; width:50px; word-wrap:break-word;"><apex:outputText value="{!c.Company_Name__c}" style="word-wrap:break-word;"/></span><br/>
                </apex:repeat>
              <!--  <apex:outputText value="{!v.Company_Name__c}"/> -->
            </apex:column>
            <apex:column >
                <apex:facet name="header">Customer/Participant Name</apex:facet>
                <apex:repeat value="{!v.VOC_Customer_Names__r}" var="c">
                    <span style="display:block; width:20px; word-wrap:break-word;"><apex:outputText value="{!c.Customer_Name__c}"/></span><br/>
                </apex:repeat>
            </apex:column>
            
            
            <apex:column >
                <apex:facet name="header">Customer's Title/Role</apex:facet>
                <apex:repeat value="{!v.VOC_Customer_Names__r}" var="c">
                    <apex:outputText value="{!c.Customer_s_Title_Role__c}"/><br/>
                </apex:repeat>
              <!--  <apex:outputText value="{!v.Customer_s_Title_Role__c}"/> -->
            </apex:column>
            <apex:column >
                <apex:facet name="header">Customer's Email</apex:facet>
                <apex:repeat value="{!v.VOC_Customer_Names__r}" var="c">
                    <apex:outputText value="{!c.Primary_Customer_s_Email__c}"/><br/>
                </apex:repeat>
             <!--   <apex:outputText value="{!v.Customer_s_Email__c}"/> -->
            </apex:column>
            <apex:column >
                <apex:facet name="header">VOC Purpose</apex:facet>
                <span style="display:block; width:70px; word-wrap:break-word;"><apex:outputText value="{!v.Purpose_of_this_VOC__c}"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">VOC Hypothesis</apex:facet>
                <span style="display:block; width:40px; word-break:break-all;"> <apex:outputText value="{!v.VOC_Hypothesis__c}" style="word-break:break-all;"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Key Takeaways</apex:facet>
                <span style="display:block; width:10px; word-wrap:break-word;"><apex:outputText value="{!v.Key_Takeaways1__c}"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Financial Implications</apex:facet>
                <span style="display:block; width:10px; word-wrap:break-word;"><apex:outputText value="{!v.Financial_Implications__c}"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Sensitive Info?</apex:facet>
                <span style="display:block; width:20px; word-wrap:break-word;"><apex:outputText value="{!IF(v.Sensitive__c == true, 'Yes','No')}"/></span>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Security Group</apex:facet>
                <span style="display:block; width:30px; word-wrap:break-word;"><apex:outputText value="{!v.Security_Group__c}"/></span>
            </apex:column>        
    </apex:dataTable> 

</apex:page>