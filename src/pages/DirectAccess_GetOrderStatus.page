<apex:page sidebar="false" showHeader="false" standardStylesheets="false" docType="html-5.0" applyHtmlTag="false"> 
    <html>
        <head>
            <meta charset="utf-8"></meta>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            <meta name="viewport" content="width = device-width, initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no"></meta>
            <title>Direct Access Order Status Login </title>
            <meta name="description" content="DAR aero app"></meta>
            <!--<link rel="shortcut icon" href="">-->
            <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.DirectAccess_Assets, 'css/bootstrap.min.css')}"> </link>
            <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.DirectAccess_Assets, 'css/DAR-styles.css')}"> </link>   
            <script type="text/javascript" src="{!URLFOR($Resource.DirectAccess_Assets, 'js/lib/jquery-3.2.1.min.js')}"> </script>
            <script type="text/javascript" src="{!URLFOR($Resource.DirectAccess_Assets, 'js/lib/bootstrap.min.js')}"> </script>
        </head>     
        <script>
            var userAgent = navigator.userAgent;
            var hon_loggedIn = false;   
            var userIdFromTheme= '';           
            var hon_first_name = "";     
            var hon_last_name = "";       
            function validate(){
                ConvertCase();
                if($('#username').val() == ''){
                    
                    $('#errorid').html('Please enter Username.');
                    return false;
                }else if($('#password').val() == ''){
                    $('#errorid').html('Please enter Password.');
                    return false;
                }else {
                    return true;
                }
            }       
            //Get parameters
            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            function ConvertCase() {         
                var tt = $('#username').val().toLowerCase();
                $('#username').val(tt);
                
            }
        </script>
        <script type="text/javascript" src="assets/js/DAR-scripts.js"></script>     
        <body >   
            <div id="DAR-wrapper">
                <div class="DAR-content">
                    <section id="DAR-oc-screen" class="container DAR-subcontent">
                        <a class="DAR-back-nav" href="/bgadir/DirectAccess_Homepage"> </a>
                        <figure class="row DAR-map-socket DAR-cloud-bg">  </figure>
                        <article class="row DAR-contact-block">
                            <h2 class="DAR-contact-heading"> Order Status </h2>
                            <p class="DAR-contact-note"> Lorem ipsum dolor sit amet, option explicar. Agam numquam complectitur.  </p>
                            <span class="DAR-section-img DAR-order-status"> </span>
                        </article>                      
                        <div class="row DAR-os-conatainer DAR-section-bg">                          
                            <!-- <div style="float: left; margin-left: 0px;" class="span6"> -->
                                <!-- <div class="semitrans">    -->
                                    <span class="errordiv" style="color:red; size:14px;" id="errorid"></span><br/>                                      
                                    <form action="https://qcwa.honeywell.com/login.do" method="post" name="cwa_login" class="DAR-form-section DAR-login-form">
                                        <div class="form-group">
                                            <label for="username" >Honeywell ID</label>
                                            <input type="text" class="form-control input-lg" name="username" placeholder="Honeywell ID" id="username" ></input>
                                        </div>
                                        <div class="form-group mb-50">
                                            <label for="password" >Password</label>
                                            <input type="password" tabindex="2" name="password" placeholder="Password" id="password" class="form-control input-lg"/>
                                            <input type="hidden" name="appid" value="39604" /> 
                                        </div>
                                        <div class="checkbox">
                                            <label class="checkbox"><input type="checkbox" name="remhonid"/> Remember me</label>
                                        </div>
                                        <button tabindex="3" type="submit" class="btn btn-primary btn-lg" onclick="return validate();">Sign in</button>
                                    </form>
                                <!-- </div> -->
                            <!-- </div> -->
                        </div>
                    </section>
                </div>
            </div>
        </body>  
    </html>
    <script>
        $(document).ready(function(){
            var errorCode = getParameterByName('errcode');
            
            if(errorCode == 'cwa01'){
                $('#errorid').html('You have entered an invalid Honeywell ID or password. Please try again.');
            }
        });
    </script> 
