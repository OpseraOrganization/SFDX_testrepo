<apex:page standardController="Case" extensions="AccountWebForm"  showHeader="true" sidebar="false">
    <apex:form >
        <style type="text/css">
        .tier {
        width: 200%;
        }
        </style>

        <apex:image id="theImage" value="{!$Resource.webformLogo}" width="500" height="200"/>
        <br/>
        <b>&nbsp;&nbsp;&nbsp;&nbsp;The following request for information is required in order to establish a new customer or 
        request change(s) to an existing customer account. Please read and <br/>&nbsp;&nbsp;&nbsp;&nbsp;complete to help us expedite the establishment of your new or 
        changed account.</b>

        <apex:pageBlock id="newId" title="Salesforce Customer Setup Form">   
            <b><font color="Red"><apex:pageMessages id="message"/></font></b><br/>
            
            <apex:pageBlockSection title="SUBMITTER CONTACT INFORMATION">
             
            <apex:pageBlockSectionItem >
            <apex:outputLabel value="First Name" />
            <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
            <apex:inputText value="{!firstname}" required="true"/>
            </div>
            </apex:define>
            </apex:pageBlockSectionItem>
 
            <apex:pageBlockSectionItem >
            <apex:outputLabel value="Last name" />
            <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
            <apex:inputText value="{!lastname}" required="true"/>
            </div>
            </apex:define>
            </apex:pageBlockSectionItem>
            
             <apex:pageBlockSectionItem >
             <apex:outputLabel value="Email" />
             <apex:define name="requiredInputDiv"><div class="requiredInput">
             <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
             <apex:inputText value="{!Email}"  required="true"/>
             </div>
             </apex:define>
             </apex:pageBlockSectionItem>

            <apex:pageBlockSectionItem >
            <apex:outputLabel value="Currently Doing Business with Honeywell" />
            <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
            
            <apex:selectList value="{!Currentlydoingbusiness}" size="1"  required="true">
            <apex:selectOptions value="{!listofDobuss}"/>
            </apex:selectList>
            </div>
            </apex:define>
            </apex:pageBlockSectionItem>
         
           <apex:pageBlockSectionItem >
           <apex:outputLabel value="Type of Request" />
           <apex:define name="requiredInputDiv"><div class="requiredInput">
           <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
           <apex:selectList value="{!TypeofRequest}" size="1"  required="true">
           <apex:selectOptions value="{!listofTyperequest}"/>
           </apex:selectList>
           </div>
           </apex:define>
           </apex:pageBlockSectionItem>

          <!--  <apex:pageBlockSectionItem >
            <apex:outputLabel value="Type of Request" />
            <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
            <apex:inputText value="{!TypeofRequest}" required="true"/>
            </div>
            </apex:define>
            </apex:pageBlockSectionItem>-->
          

            <apex:pageBlockSectionItem helpText="Type the 'SBI Account Row ID' located on the 'Account Information Section'." >
            <apex:outputLabel value="CRM ID" />
            <apex:inputText value="{!CRMID}" />
            </apex:pageBlockSectionItem>

                <br/>

                <apex:pageBlockSectionItem rendered="{!IF((showsection=false),true,false)}">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </apex:pageBlockSectionItem>

            </apex:pageBlockSection>

            <apex:pageBlockButtons >
                <apex:commandButton value="Clear"  onclick="javascript:window.parent.close();window.open('/apex/AccountWebForm','','width=800,height=800');"/>
                <apex:commandButton value="Next" action="{!ShowDetails}" rendered="{!IF((showsection),false,true)}" />
                <apex:commandButton value="Submit" rendered="{!showsection}"  action="{!caseSave}" />
            </apex:pageBlockButtons>

            <apex:pageBlockSection id="newsec1"    rendered="{!IF((TypeofRequest=='Account Change'  && showsection=true),true,false)}"   title="CURRENT ACCOUNT DETAILS IN SYSTEM">

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Name tested" />
                    
                    <apex:outputText value="{0}"> 
                    <apex:param value="{!ACCNAME1}" />
                    </apex:outputText>

                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Company Website/URL" />
                    <apex:outputText value="{!accounts1.website}"/>     
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 1" />
                    <apex:outputText value="{!accounts1.Address_Line_1__c}" /> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Primary Phone Number" />
                    <apex:outputText value="{!accounts1.phone}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 2" />
                    <apex:outputText value="{!accounts1.Address_Line_2__c}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Fax Number" />
                    <apex:outputText value="{!accounts1.Fax}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 3" />
                    <apex:outputText value="{!accounts1.Address_Line_3__c}"/> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="SBU"/>
                    <apex:outputField value="{!accounts1.Strategic_Business_Unit__c}"/>
                 </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Country" />
                    <apex:outputField value="{!accounts1.Country_Name__c}" /> 
                </apex:pageBlockSectionItem>
                
                   <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT"/>
                    <apex:outputField value="{!accounts1.CBT__c}"/>
                 </apex:pageBlockSectionItem> 
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="City" />
                    <apex:outputText value="{!accounts1.City_Name__c}" /> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT Team"/>
                    <apex:outputField value="{!accounts1.CBT_Team__c}"/>
                 </apex:pageBlockSectionItem> 

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="State" />
                    <apex:outputText value="{!accounts1.State_Code__c}"/> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT Directorate"/>
                    <apex:outputField value="{!accounts1.CBT_Directorate__c}"/>
                 </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Zip Code" />
                    <apex:outputText value="{!accounts1.Postal_Code__c}"/> 
                </apex:pageBlockSectionItem>
                
                 <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Market"/>
                    <apex:outputField value="{!accounts1.Market_Name__c}"/>
                 </apex:pageBlockSectionItem> 

            </apex:pageBlockSection>
            <br/>

            <apex:pageBlockSection id="newsec"    rendered="{!IF((TypeofRequest=='Account Change'&& showsection=true),true,false)}"   title="CHANGE DESCRIPTION">

                <apex:pageBlockSectionItem rendered="{!IF((TypeofRequest=='Account Change'),true,false)}" >
                <apex:outputLabel value="Type" />
                <apex:selectList value="{!changetype}" size="1"  required="false">
                <apex:selectOptions value="{!listofTypechange}"/>
                </apex:selectList>
                    <!--<apex:outputLabel value="Type" />
                    <apex:inputText value="{!changetype}"  />  -->    
                </apex:pageBlockSectionItem>
                <br/>

                <apex:pageBlockSectionItem rendered="{!IF((TypeofRequest=='Account Change'),true,false)}"  >
                    <apex:outputLabel value="Description" />
                    <apex:inputTextarea value="{!ChangeDescription}"  styleClass="tier" />      
                </apex:pageBlockSectionItem>

            </apex:pageBlockSection>

            <apex:pageBlockSection rendered="{!IF((TypeofRequest!='Account Change'&& showsection=true),true,false)}" title="CUSTOMER ACCOUNT INFORMATION">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Name" />
                    <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
                    <apex:inputText value="{!AccountNameweb}" required="true"/> 
                    </div>
            </apex:define>      
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Company Website/URL" />
                    <apex:inputText value="{!CompanyWebsiteURL}"/>     
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 1" />
                    <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
                    <apex:inputText value="{!AddressLine1}" required="true"/> 
                    </div>
            </apex:define>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Primary Phone Number" />
                    <apex:inputText value="{!AccountPrimaryPhoneNumber}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 2" />
                    <apex:inputText value="{!AddressLine2}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Account Fax Number" />
                    <apex:inputText value="{!AccountFaxNumber}"/> 
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Street Address Line 3" />
                    <apex:inputText value="{!AddressLine3}"/> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="SBU" />
                    <apex:inputField value="{!accounts1.Strategic_Business_Unit__c}"/> 
                </apex:pageBlockSectionItem>
               
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Country" />
                    <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
                    <apex:inputText value="{!CountryName}" required="true"/> 
                    </div>
            </apex:define>
                </apex:pageBlockSectionItem>
                
                 <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT" />
                    <apex:inputField value="{!accounts1.CBT__c}"/> 
                </apex:pageBlockSectionItem>                 

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="City" />
                    <apex:define name="requiredInputDiv"><div class="requiredInput">
            <apex:define name="requiredInputDiv"><div class="requiredBlock"/></apex:define>
                    <apex:inputText value="{!CityName}" required="true"/> 
                    </div>
            </apex:define>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT Team" />
                    <apex:inputField value="{!accounts1.CBT_Team__c}"/> 
                </apex:pageBlockSectionItem> 
                

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="State" />
                    <apex:inputText value="{!StateCode}"/> 
                </apex:pageBlockSectionItem>
                                           
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="CBT Directorate" />
                    <apex:inputField value="{!accounts1.CBT_Directorate__c}"/> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Zip Code" />
                    <apex:inputText value="{!PostalCode}"/> 
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Market" />
                    <apex:inputField value="{!accounts1.Market_Name__c}"/> 
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>       
            <br/>
            <apex:pageBlockSection rendered="{!showsection}" >
                <b style="font-size:15px">Supporting Documentation</b><br/>
                Type the path of the file or click the Browse button to find the file.(The file cannot be larger than 10MB.)
                Click on "Add File" button to complete upload.
                <apex:inputFile style="width:100%" id="fileToUpload" value="{!fileBody}" filename="{!fileName}" /> 
                <br/>
                <apex:commandButton value="Add File"   action="{!uploadfile}" status="Add" /> 
                <apex:actionStatus startText="(Adding...)" id="Add"/>              
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!showdocLoaded}"  title="File Loaded">
                <apex:outputText value="{!myAttach}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>