                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Customer Email</b></font><font color="red"><b> *</b></font></td>
                          <td><apex:inputField value="{!Cas.App_Email__c}" style="width:153px" required="True"/> </td> 
                       </tr>
                        <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Customer Phone Number</b></font><font color="red"><b> *</b></font></td>
