                       <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Description of Problem</b></font><font color="red"><b> *</b></font></td>
                          <td><apex:inputField value="{!Cas.Description}" style="width:153px" required="True"/> </td> 
                       </tr>
                 
                       <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Aircraft Type</b></font></td>
                          <td><apex:inputField value="{!Cas.Aircraft_Type__c}" style="width:153px"/> </td> 
                       </tr>
                       <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Resolution</b></font><font color="red"><b> *</b></font></td>
                          <td><apex:inputField value="{!Cas.Resolution__c}" style="width:153px" required="True"/> </td> 
                       </tr>
                       <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Supported Products</b></font><font color="red"><b> *</b></font></td>
                          <td><apex:inputField value="{!Cas.Supported_Products__c }" style="width:153px" required="True"/> </td> 
                       </tr>
                       <tr>
                          <td width="10px">&nbsp;</td>
                          <td><font family="Arial"><b>Bendix King Escalation</b></font></td>
                          <td><apex:inputField value="{!Cas.BendixKing_Escalation__c}" style="width:153px"/> </td> 
                       </tr>
                                  
                                          
                     </table>
                    </td>
                </tr>
                <tr></tr>
                <tr>
                   <td align="Center"><apex:commandbutton value="Clear" action="{!cancelform}"/>
