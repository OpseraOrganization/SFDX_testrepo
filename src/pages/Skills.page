<apex:page standardcontroller="Skills2__c" extensions="skillsClass">
<apex:form >
  <script>
     function skillsUp(input,Id){       
          var doc = document.getElementById(Id).value;                       
           skillsnewFunc();  
            }
            
            function formulaFields(input,Id){       
            var doc = Id;                       
            skillsnewFunc();  
            }
            
          function skillsUp1(input,Id){       
          var doc = document.getElementById(Id).value;                       
           skillsnewFunc1();  
            }
            
          function skillsUp2(input,Id){       
          var doc = document.getElementById(Id).value;                       
           skillsnewFunc2();  
            }
            function skillsUp3(input,Id){       
          var doc = document.getElementById(Id).value;                       
           skillsnewFunc3();  
            }
  </script>
   <apex:outputpanel >
        <apex:actionstatus id="loadstatus">
            <apex:facet name="start">
                <div class="waitingSearchDiv" id="el_loading" style="background-color: #FFFFFF; height: 100%; width:100%; opacity: 0.95; filter: alpha(opacity=95);">
                    <div class="waitingHolder" style="top: 74.2px; width: 100%; background-color: #FFFFFF;">
                        <img class="waitingImage" src="{!$Resource.Skills_Loading_Image}" title="Please Wait..."/>
                    </div>
                </div>
            </apex:facet>
        </apex:actionstatus>
<apex:pageBlock id="newId">
   <b><font color="Red"><apex:pageMessages id="message"/></font></b><br/>
 <apex:pageBlockButtons >

   <apex:commandButton action="{!Cancel}"  value="Cancel" />  
  
         <apex:actionStatus id="mySaveStatus5">
            <apex:facet name="stop">
                <apex:commandButton action="{!SaveSkills}" status="mySaveStatus5" value="Save Skills"  rendered="{!viewSave}"   disabled="false" rerender="newId"/>
            </apex:facet>
            <apex:facet name="start">
                <apex:commandButton action="{!SaveSkills}" status="mySaveStatus5"    rendered="{!viewSave}"      value="Processing..." disabled="true"/> 
            </apex:facet>
            
          </apex:actionStatus> 
          
        
          <apex:commandButton action="{!saveAndNewMethod}" status="loadstatus" id="saveNewButton" value="Save & New" disabled="false"  rerender="newId" rendered="{!viewSave && showAircraftType}"/>      
           
               
   <apex:commandButton action="{!AddNewSkills}"  value="Add New Skill" rendered="{!valueSkill}"/> 
   <apex:commandButton action="{!Cancel}"  value="Back" rendered="{!valueSkill}"/> 
 </apex:pageBlockButtons>
   
<apex:pageBlock rendered="{!hideSection}" >

<apex:panelGrid columns="1" width="100%"> 
<apex:pageBlockSection title="Select Contact" rendered="{!showcontact}">
 </apex:pageBlockSection>
   <apex:inputField value="{!SkillsRec.Contact__c}" required="true" rendered="{!showcontact}" />       
   
</apex:panelGrid> 

 <apex:pageBlockSection title="Select Skill Type">
   <apex:selectList title="Select Skill Type"  id="chooseValue1" value="{!value1}" size="1"  onselect="skillsUp(this,'{!$Component.chooseValue1}')"        onchange="skillsUp(this,'{!$Component.chooseValue1}')">
    <apex:selectOptions value="{!items}"/>                 
      <apex:actionFunction name="skillsnewFunc" action="{!ViewDetails}" rerender="newId" status="loadstatus" />                               
   </apex:selectList>       
 </apex:pageBlockSection> 
 
 <apex:pageBlockSection title="Select Skill Value"  rendered="{!viewOthers}">
   <apex:selectList title="Select Value2"  rendered="{!valuesel}" id="chooseValue2" value="{!value2}" size="1"      onselect="skillsUp1(this,'{!$Component.chooseValue2}')"   onchange="skillsUp1(this,'{!$Component.chooseValue2}')">
     <apex:selectOptions id="chooseValue21"    rendered="{!valuesel}"  value="{!items2}"/>         
       <apex:actionFunction name="skillsnewFunc1" action="{!ViewDetails3}"  status="loadstatus"     rerender="newId" />          
   </apex:selectList>   
 </apex:pageBlockSection>
 
 <apex:pageBlockSection title="Select Skill Value "  rendered="{!valmultisel}">
   <apex:selectList title="Select Skill Value"  rendered="{!valmultisel}"  id="chooseValue3New" value="{!multivalues}"  multiselect="true"  size="8"   onselect="skillsnewFunc3(this,'{!$Component.chooseValue3New}')"   onchange="skillsnewFunc3(this,'{!$Component.chooseValue3New}')" >
     <apex:selectOptions id="chooseValue3Data" rendered="{!valmultisel}"   value="{!items2}"/>
      <apex:actionFunction name="skillsnewFunc3" action="{!ViewDetailsExp}" status="loadstatus"   rerender="newId" />            
   </apex:selectList>   
 </apex:pageBlockSection>
  
 <table><tr><td>
  
    <apex:pageBlockSection title="Select Supported Product" rendered="{!showsupportedproduct}">
        
       <apex:inputField value="{!SkillsRec.Supported_Products__c}" required="false" rendered="{!showsupportedproduct}">
           <apex:actionSupport event="onchange" action="{!getCPGPT}" reRender="cpg,pt,newId" status="loadstatus" />
       </apex:inputField>
    </apex:pageBlockSection>   
          
 </td>
 <td>
  
    <apex:pageBlockSection title="Select Aircraft Type" rendered="{!showAircraftType}">
        
       <apex:inputField value="{!SkillsRec.Aircraft_Type__c}" required="false" rendered="{!showAircraftType}">
           <apex:actionSupport event="onchange" action="{!getPlatform}" status="loadstatus" reRender="newId"/>
       </apex:inputField>
    </apex:pageBlockSection> 
          
 </td>
 <td>
     <apex:pageBlockSection id="cpg" title="Catalog Product Group" rendered="{!showcatalogproductgroup}">
         <apex:outputField value="{!SkillsRec.Catalog_Product_Group__c}"/>
     </apex:pageBlockSection>
 </td>
 <td>
     <apex:pageBlockSection id="pt" title="Product Type" rendered="{!showproducttype}">
         <apex:outputField value="{!SkillsRec.Product_Type__c}"/>
     </apex:pageBlockSection>
 </td>
 </tr></table>
<table><tr><td>
 </td></tr></table>
<apex:panelGrid id="skexpertise" columns="2" width="100%">   
 <apex:pageBlockSection title="Enter the Expertise details"   rendered="{!valueExp}"      >     
   <apex:inputField value="{!SkillsRec.Expertise__c}"         />
     <apex:inputField value="{!SkillsRec.Primary_Secondary__c}"  rendered="{!valuesel2}"/>    
    <br/> 
 </apex:pageBlockSection>  
 <apex:pageBlockSection title="Enter Skill Value Comments"   rendered="{!valueExp}"      >     
   <apex:inputField value="{!SkillsRec.Skill_Value_Comments__c}"/>  
    <br/> 
 </apex:pageBlockSection>    
</apex:panelGrid>
