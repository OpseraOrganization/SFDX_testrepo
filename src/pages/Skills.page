</apex:pageBlock>

<apex:pageBlock >   
 <apex:panelGrid columns="1" width="100%">   
  <apex:pageBlockSection title="View Skill details"   rendered="{!valueSkill}"      > 
    <apex:pageBlockSectionItem >
          <apex:outputText >Skill Name </apex:outputText>        
          <apex:outputlink value="/{!SkillsRec.id}?&retURL={!SkillsRec.id}" target="_parent">{!SkillsRec.name}</apex:outputlink>        
    </apex:pageBlockSectionItem>
  </apex:pageBlockSection>
 </apex:panelGrid>     
  
  <apex:panelGrid columns="1" width="100%">  
       <apex:pageBlockSection rendered="{!valueSkill}"      > 
            <apex:outputField value="{!SkillsRec.Contact__c}"/> 
            <apex:outputField value="{!SkillsRec.Skill_Type__c}"/> 
            <apex:outputField value="{!SkillsRec.Skill_Value__c}"/> 
            <apex:outputField value="{!SkillsRec.Product_Types__c}"/> 
            <apex:outputField value="{!SkillsRec.Catalog_Product_Groups__c}"/> 
            <apex:outputField value="{!SkillsRec.Supported_Products__c}"/> 
            <apex:outputField value="{!SkillsRec.Expertise__c}"/>
            <apex:outputField value="{!SkillsRec.Primary_Secondary__c}" />
