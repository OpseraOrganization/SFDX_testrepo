<script type="text/javascript">
            var userAgent = navigator.userAgent;
            var hon_loggedIn = false;   
            var userIdFromTheme= '';           
            var hon_first_name = "";     
            var hon_last_name = ""; 
            var userNameAsItIs;
            function validate(){
                userNameAsItIs = $('#username').val();
                ConvertCase();
                if($('#username').val() == ''){
                    $('.DAR-os-error').html('Please enter Username.');
                    $('#DAR-os-error-modal').modal();
                    return false;
                }else if($('#password').val() == ''){
                    $('.DAR-os-error').html('Please enter Password.');
                    $('#DAR-os-error-modal').modal();
                    return false;
                }else {
                    localStorage.setItem('presentHID-Local', userNameAsItIs);
                    localStorage.setItem('presentHIDSetting-Local', "Set");
                    if($('#remhonid').is(':checked'))
                    {
                        localStorage.setItem('presentpassword-Local', $('#password').val());
                    }
                    else
                    {
                        localStorage.removeItem('presentpassword-Local');
                    }
                    return true;
                }
            }       
            //Get parameters
            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            function ConvertCase() {         
                var tt = $('#username').val().toLowerCase();
                $('#username').val(tt);
                
            }
        </script>
