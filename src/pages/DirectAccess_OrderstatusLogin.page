        $(document).ready(function(){
            var errorCode = getParameterByName('errcode');
            if(errorCode == 'cwa01'){
                localStorage.setItem('presentHID-Local', "");
                $('.DAR-os-error').html(' Invalid Honeywell ID or Password. Please try again. ');
                $('#DAR-os-error-modal').modal();
            }
            
            var uname = localStorage.getItem('presentHID-Local');
            var pword = localStorage.getItem('presentpassword-Local');
            
            if(uname != null && pword != null)
            {
                $("#remhonid").prop('checked', true);
                $('#username').val(uname);
                $('#password').val(pword);
            }
        });
    </script>   
