<apex:page showHeader="false" standardStylesheets="false">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Honeywell - Idea Exchange</title>
<link href="{!$Resource.idex_styles_css}" rel="stylesheet" type="text/css" />
<style>
.header {
    background-image: url({!$Resource.idex_background_png});
}
.content {
    background-image: url({!$Resource.idex_background_png});
}
.footer {
    background-image: url({!$Resource.idex_background_bottom_png});
}
</style>
</head>

<body>
<div class="container">
  <div class="header">
      <a href="#">
          <img src="{!$Resource.idex_hon_png}" alt="Insert Logo Here" name="Insert_logo" width="200" height="50" id="Insert_logo" style="display:block;" />
      </a> 
    <!-- end .header -->
  </div>
  <div class="content">
    <div id="slider">
    <img src="{!$Resource.idex_slide1_png}" width="920" height="290" />
    </div>
    
    <table width="100%">
    <tr><td width="50%" align="center">
    <div class="bigblock">A forum to exchange ideas, driving maximum value from Honeywell's investment in research and development.</div>
    </td>
    <td width="50%" align="center">
    
    <apex:outputPanel layout="div" rendered="{!IF($CurrentPage.parameters.errcode=='cwa01','true','false')}">
      <h3 class="error">Login Error</h3>
      <p><strong>Check that your Honewell ID and Password information was entered correctly.</strong></p>
    </apex:outputPanel>
    
    <apex:outputPanel layout="div" rendered="{!IF($CurrentPage.parameters.errcode=='cwa02','true','false')}">
      <h3 class="error">Login Error</h3>
      <p><strong>User Account is locked due to number of unsuccessful login attempts above the allowed limit</strong></p>
    </apex:outputPanel>
    
    <apex:outputPanel layout="div" rendered="{!IF($CurrentPage.parameters.errcode=='cwa03','true','false')}">
      <h3 class="error">Login Error</h3>
      <p><strong>Your password has expired</strong></p>
    </apex:outputPanel>
    
    <apex:outputPanel layout="div" rendered="{!IF($CurrentPage.parameters.errcode=='cwa04','true','false')}">
      <h3 class="error">Login Error</h3>
      <p><strong>You don't have enough privileges to access this application</strong></p>
    </apex:outputPanel>
    
    <apex:outputPanel layout="div" rendered="{!IF($CurrentPage.parameters.errcode=='cwa06','true','false')}">
      <h3 class="error">Login Error</h3>
      <p><strong>Critical system error</strong></p>
    </apex:outputPanel>
    
      <apex:outputPanel layout="div" > 
      <p><strong>To Submit an IDEA, login below using your  <br/>   HON LDAP user name and password</strong></p>
    </apex:outputPanel>
    
    <div class="temp_login">
      <apex:include pageName="IdeaLoginBox"/>
    </div>
   
    </td></tr>
    </table>
    <!-- end .content -->
    <div id="subfooter"><span class="left">Honeywell Idea Exchange</span><span class="right">&copy;2012 Honeywell Aerospace</span></div>
  </div>
  <div class="footer"> <img src="{!$Resource.idex_poweredby_png}" width="120" height="31" alt="Powered By SalesForce" />   


      <!-- end .footer --></div>
  <!-- end .container --></div>
</body>
<apex:insert name="footer">
        <c:honeywellFooter />
</apex:insert>

</html>
</apex:page>