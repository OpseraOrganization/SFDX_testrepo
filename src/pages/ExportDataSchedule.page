<apex:page controller="HwTrng_CourseSchedule_cls" id="page" showHeader="false" Sidebar="false" cache="true" expires="1200" contentType="application/vnd.ms-excel#ExportData.xls" >
    <!-- Schema added to add autofilter for header row in Excel sheet -->
    <html xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40">
        <head></head> 
        <body > 
            <apex:pageBlock id="results1" >
                <!-- HTML Table used to display Candidate Data in Excel Sheet with Grid Lines -->
                <table border="1" cellpadding="1" cellspacing="0" style="width:100%;border:1px solid #000000;font-familyans-serif;font-size:10px">
                    <tr style="font-family:verdana;color:Black;font-size:12px;height=18px;width:100%" >  
                        <!-- Autofilter added for header row in Excel sheet -->
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Course Name"/></b></td> 
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Course Description"/></b></td> 
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Course Location"/></b></td> 
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Course Schedule"/></b></td> 
                    </tr> 
                   <apex:repeat Value="{!allclist}" var="CandList" id="theRepeat"> 
                        <tr border="1" style="font-family:verdana;color:Black;font-size:12px;width:100%" > 
                            <td ><apex:outputText value="{!CandList.Course_Name__r.name}"/></td> 
                            <td><apex:outputText value="{!CandList.ProductDescription__c}"/></td>
                            <td><apex:outputText value="{!CandList.Location__r.name}"/></td>
                            <td><apex:outputText value="{!CandList.Start_Date__c}"/> - <apex:outputText value="{!CandList.End_Date__c}"/></td>
                        </tr> 
                    </apex:repeat>
                </table>
             </apex:pageBlock>
        </body >
    </html>
</apex:page>