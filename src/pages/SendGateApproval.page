<apex:page standardController="Opportunity_Gate__c"  extensions="SendApprovalMail" >

<apex:sectionHeader title="Approval Process"/>
<apex:form >
 <apex:pageMessages />
<apex:pageBlock rendered="{!backto}" >
<center><apex:commandButton value="Go to Opportunity" action="{!Back}" rendered="{!backto}" /></center>
</apex:pageBlock>

<apex:pageblock rendered="{!showlist}">
  <apex:pageBlockTable value="{!wrapper}" var="op">
      <apex:column headerValue="Select">
          <apex:inputCheckbox value="{!op.selected}"/>
      </apex:column>
      <apex:column headerValue="Approver Name">
          {!op.Name}
      </apex:column>
      
      <apex:column headerValue="Reference To">
          {!op.obj}
      </apex:column>
      
      <apex:column headerValue="Approver Email">
          {!op.Email}
      </apex:column>
  </apex:pageBlockTable>
  <center><apex:commandButton value="Submit" action="{!sendMail}"/><apex:commandButton value="Cancel" action="{!cancel}"/></center>
</apex:pageblock>
</apex:form>
<apex:insert name="footer">
        <c:honeywellFooter />
</apex:insert>

</apex:page>