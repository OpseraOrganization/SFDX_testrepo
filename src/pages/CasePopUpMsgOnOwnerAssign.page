<apex:page standardController="Case" extensions="CasePopUpMsgOnOwnerAssignClass">
    <script type="text/javascript">
        var caowid = '{!Case.CaseOwnerChanged__c}';
        var casid = '{!Case.Id}';
        if(caowid=='005' && caowid!=''){          
            alert('Check email associated with the Purchase Order for the End User information. Customer is unable to put this information on their PO.');
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.CasePopUpMsgOnOwnerAssignClass.getCase}',casid,
                function(result, event){
                    if (event.status) {
                        if(result)
                        document.getElementById("responseErrors").innerHTML = "";
                    } else {
                        document.getElementById("responseErrors").innerHTML = event.message;
                    } 
                }, 
                {escape: true}
            );
        }
        else if(caowid!='' && caowid=='005 CHINA NAT ACC'){
            alert('Contact Gary Burgess, Gary Chung and George Gasper to obtain one of their approvals to process this request.');
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.CasePopUpMsgOnOwnerAssignClass.getCase}',casid,
                function(result, event){
                    if (event.status) {
                        if(result)
                        document.getElementById("responseErrors").innerHTML = "";
                    } else {
                        document.getElementById("responseErrors").innerHTML = event.message;
                    } 
                }, 
                {escape: true}
            );
        }
    </script>
    <div id="responseErrors"></div>
</apex:page>