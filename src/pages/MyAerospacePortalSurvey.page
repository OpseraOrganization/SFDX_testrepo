                    <apex:outputLabel style="font-size: 14.6667px;" value="Please let us know what we can do to improve our online ordering application or let us know what we did well."/>
                    <div class="textarea">
                        <apex:inputTextarea html-maxlength="31700" cols="70" rows="5" value="{!feeedback.Comments__c}" />
                    </div>                    
                </div>
                <div class="footer">
                    <apex:commandButton styleclass="button" value="Submit" action="{!submitFeedback}" />
                </div>
            </div>
        </apex:form>
    </apex:outputPanel>
    <apex:outputPanel styleClass="wrapper" rendered="{!isSubmitted}" layout="block">
        <div class="hidemsg" style="display: block;">            
