<apex:page controller="MyAerospacePortalSurvey" showHeader="false" sidebar="false" standardStylesheets="false">
    <style>
        .wrapper{
            margin: auto;
            width: 60%;
            padding: 10px;
        	font-family:Arial,sans-serif;
        	font-style: normal;
        }
        .heading{
            text-align:center;
            color: #7F7F7F;
            font-size:16px;
            margin-top: 50px;
        	font-weight:bold;
        }
        .question-wrapper{
        	margin:20px;
        	margin-top: 50px;
        }
        .question_new,.question{
        	margin-top:15px;
        }
        .question_new label,.question label {
        	font-size: 14.6667px;
        }
        .question i {
        	font-size: 13.333px;
        }
        .question table tr td label {
            font-size: 15px;
            display: block;
            font-weight: bold;
            margin-top: 5px;
        	padding-left: 5px;
        }
        
        .textarea{
        	padding:15px;
        }
        .footer{
        	margin-top:15px;
        	text-align:center;
        }
        .hidemsg
        {
            font-size: 150%;
            margin: 225px auto;
            text-align: center;
        }
        .button {
            background-color: #008CBA!important; /* Green */
            border: none !important;
            color: white !important;
            text-align: center !important;
            text-decoration: none !important;
            display: inline-block !important;
            font-size: 16px !important;
            margin: 4px 2px !important;
            cursor: pointer !important;
            padding: 10px 24px !important;
        }
        .opMessage table{
        	width:100%; 
        }
        
        .question_new td {
            text-align: center;
        }
        
        .question_new td label {
            display: block;
            width: 120px;
            margin-bottom: 5px;
        }
        
        
    </style>
    <apex:outputPanel layout="block"  rendered="{!isError}">
        <apex:outputPanel styleClass="opMessage" layout="block" style="width:100%;text-align:center">
            <apex:pageMessages />
        </apex:outputPanel>
    </apex:outputPanel> 
    
    <apex:outputPanel styleClass="wrapper" rendered="{!!isError && !isSubmitted}" layout="block">
        <apex:form >
            <div class="heading">
                <font>
                    Thank you for using our online ordering application.<br/>Please tell us about your experience:
                </font>
            </div>
            
            <div class="question-wrapper">
                <div class="question_new">
					<apex:outputLabel style="font-size: 14.6667px;" value="Please rate your satisfaction with this interaction."/>
                    <apex:selectRadio layout="lineDirection" value="{!feeedback.Customer_Overall_Satisfaction_VOC__c}" style="width:450px;" >
                        <apex:selectOption itemValue="Red - Very Dissatisfied" itemLabel="Very Unsatisfied" />
                        <apex:selectOption itemValue="Yellow - Somewhat Dissatisfied" itemLabel="Unsatisfied" />
                        <apex:selectOption itemValue="Neutral" itemLabel="Neutral" />
                        <apex:selectOption itemValue="Green - Satisfied" itemLabel="Satisfied" />
                        <apex:selectOption itemValue="Blue - Best in Class" itemLabel="Very Satisfied" />
                    </apex:selectRadio>
                </div>
                <div class="question">
                    <apex:outputLabel style="font-size: 14.6667px;" value="To what extent do you agree with the following statement: “The MyAerospace portal made it easy to transact online.”"/><i> (1 being very unsatisfied and 10 being very satisfied)</i>
                    <apex:selectRadio layout="lineDirection" value="{!feeedback.CES_Score__c}" style="width:450px;" >
                        <apex:selectOption itemValue="1" itemLabel="1" />
                        <apex:selectOption itemValue="2" itemLabel="2" />
                        <apex:selectOption itemValue="3" itemLabel="3" />
                        <apex:selectOption itemValue="4" itemLabel="4" />
                        <apex:selectOption itemValue="5" itemLabel="5" />
                        <apex:selectOption itemValue="6" itemLabel="6" />
                        <apex:selectOption itemValue="7" itemLabel="7" />
                        <apex:selectOption itemValue="8" itemLabel="8" />
                        <apex:selectOption itemValue="9" itemLabel="9" />
                        <apex:selectOption itemValue="10" itemLabel="10"  />
                    </apex:selectRadio>
                    
