<apex:page controller="HwTrng_CourseInfo_cls" showHeader="false" sidebar="false" action="{!search}">


<apex:form >
<table width="608px">
<tr>
<td>
<apex:image value="{!$Resource.HW_Trng_Sol}"/>
</td>
</tr>

      <tr>
          <td>
             <apex:pageBlock >
              <b> Search Criteria </b> <br/>
             <apex:pageBlockSection columns="3" >
            <apex:outputLabel value="Course Name"></apex:outputLabel>
             <apex:outputLabel value="Description"></apex:outputLabel>
              <apex:outputLabel value="Potential Location"></apex:outputLabel>
             <apex:inputText value="{!coursename}"/>
             <apex:inputText value="{!coursedescp}"/>
             <apex:selectList value="{!courseloc}" size="1">
             <apex:selectOptions value="{!location}"> </apex:selectOptions> 
             </apex:selectList>
             </apex:pageBlockSection>
             <apex:pageBlockSection columns="1" >
             <apex:outputLabel value="(OR) Keyword"></apex:outputLabel>
             
             <apex:inputText value="{!coursekey}" onmouseover="(eg. Aircraft Type Dassault )"/>   
          
             </apex:pageBlockSection>
             <apex:commandButton action="{!search}" value="Search"/>
             </apex:pageBlock>
            <apex:pageblock >
            <b> Courses </b> <br/><br/>
            <apex:outputText value="{!msg}" rendered="{!Not(isnull(msg))}"/ >
            <apex:pageBlockTable columns="2" value="{!results}" var="v" rendered="{!(isnull(msg))}" id="table1">
            <apex:column id="colname">
          <apex:facet name="header" >
          <apex:outputPanel >
          <b>Course Name</b>
       <apex:commandLink action="{!sortascend}" rerender="table1">
          <apex:image url="{!$Resource.HwTrng_SortUp}"/> 
          </apex:commandlink>
          <apex:commandLink action="{!sortdescend}" rerender="table1">
          <apex:image url="{!$Resource.HwTrng_SortDown}"/> 
          </apex:commandlink> 
          </apex:outputPanel>
          </apex:facet>
          <apex:outputLink value="/apex/HwTrng_Coursedetail_VF" >{!v.Name}
      <apex:param value="{!v.Id}" name="id"/>
       </apex:outputLink>
        </apex:column>
        
        <apex:column id="colaction">
          <apex:facet name="header" >
          <apex:outputPanel >
          <b>Action</b>
          </apex:outputPanel>
          </apex:facet>
          <apex:outputLink value="/apex/HwTrng_Reserve1_VF" >Make Reservation
      <apex:param value="{!v.Id}" name="id"/>
       </apex:outputLink>
        </apex:column>
             </apex:pageBlockTable>
             <apex:outputPanel >
  <apex:commandLink value="Previous" action="{!prev}" rendered="{!d6}" />
  &nbsp;
<apex:commandLink value="Next" action="{!next}" rendered="{!d11}"/>

         </apex:outputPanel>
             </apex:pageBlock>
          
          </td>
      
      </tr>
 </table>
</apex:form>
 
    
</apex:page>