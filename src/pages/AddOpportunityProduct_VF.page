<apex:page id="thePage" tabStyle="OpportunityLineItem" lightningStylesheets="true" standardController="OpportunityLineItem" extensions="AddOpportunityProduct" action="{!Editpage}"  >
 
 <apex:form id="theFrm"> 
  <apex:pageMessages />
 <apex:pageBlock id="thePBlk" tabStyle="OpportunityLineItem" title="Opportunity Product Input">
     <span align="center"><font color="red"></font></span>
     <apex:pageMessages id="messages"/>
     <apex:pageBlockButtons >
         <apex:commandButton action="{!save}"  value="Save" oncomplete="sendToLC('{!pId}');" reRender="messages,pblkSct"/>
          <apex:commandButton action="{!saveNewF}"  value="Save & New" />
         <apex:commandButton action="{!cancel}" value="Cancel"/>
     </apex:pageBlockButtons> 
     <br></br>
      
     <apex:pageBlockSection id="pblkSct" columns="2" title="Product Infromation" collapsible="false">
             <apex:inputcheckbox id="active" value="{!olItem.Active__c}" selected="true"/>
             <br/>
             <apex:outputField value="{!olItem.Opportunityid}"/> 
             
             <apex:inputField required="true" value="{!olItem.ServiceDate}"/>            
             <apex:inputField value="{!olItem.Type__c}"/>
             <apex:inputField required="true" value="{!olItem.UnitPrice}"/>
            <apex:inputField required="true" value="{!olItem.M_PM_Product__c}"/>
             <apex:inputField value="{!olItem.Quantity}"/>
             <apex:inputField required="true" value="{!olItem.Revenue_Type__c}"/>
             <apex:outputField value="{!olItem.TotalPrice}"/>
             <apex:inputField value="{!olItem.Description}"/>
             <!-- Going forward the Probability field will be filled with ATR_Probability__c from Opportunity-->
             <!--<apex:inputField required="true" value="{!olItem.Probability__c}"/>-->
             <apex:inputField required="true" value="{!olItem.Plant__c}"/>
             <apex:inputField value="{!olItem.Blanket_Forecast__c}" /> 
     </apex:pageBlockSection>
     <!--<apex:pageBlockSection columns="2" collapsible="false" title="Current Year Revenue Estimate">
             <apex:inputField value="{!olItem.E_SIOP_Demand_Category__c}"/>
             <apex:inputField value="{!olItem.Include_Net_Rev_in_SRO_Estimate__c}"/>
              <apex:pageBlockSectionitem >
              </apex:pageBlockSectionitem>
     </apex:pageBlockSection>-->
     <apex:pageBlockSection title="Product" collapsible="false">
        <apex:pageBlockSectionItem >
           <apex:outputLabel >Product</apex:outputLabel>
           <apex:outputtext value="Unspecified"/>
        </apex:pageBlockSectionItem>
     </apex:pageBlockSection>
 </apex:pageBlock>
