<apex:page controller="AddExistingSR" id="pg" showHeader="false">
    <apex:form id="frm">
    <apex:pageMessages />
        <div Style= "height:160px; width:100%;padding-left:22px;background-color:#EFF5FB" >
        <br/>
           <apex:image value="{!$Resource.Search1}" height="55px" width="40px"/>&nbsp;&nbsp;&nbsp;&nbsp;
            <apex:outputLabel value="Lookup" id="optlbl1" Style="font-size:160%;"/><br/>
           
            <apex:outputLabel value="Search" id="optlbl2" Style="font-size:100%;" for="inptxt"/>&nbsp;&nbsp;
            <apex:inputText id="inptxt" value="{!textValue}"/>&nbsp;&nbsp;
            <apex:commandButton value="Go!" action="{!letsGo}" reRender="pgblk" status="Status1"/>&nbsp;&nbsp; 
            <apex:actionStatus id="Status1" >
                <apex:facet name="start">
                    <apex:image url="/img/loading.gif" styleclass="waitingImage" title="Please Wait..."/> 
                </apex:facet>
            </apex:actionStatus>
        </div>
        <apex:commandLink value=" Clear Search Results " style="padding-left:20px" onClick="clearText();" reRender="pgblktab" /><br/><br/>
        <apex:outputText value="Search Results" id="optlblesr" Style="padding-left:22px;font-size:160%;"/>
            <apex:pageBlock title="Service Request [{!recordSize}]" id="pgblk"  >
                <div Style="padding-left:80%;" >Page #{!pageNumber}&nbsp;&nbsp;
                    <apex:commandLink value="First" action="{!first}"/>&nbsp;&nbsp;
                    <apex:commandLink value="Previous" action="{!previous}" rendered="{!hasPrevious}"/>&nbsp;&nbsp;
                    <apex:commandLink value="Next" action="{!next}" rendered="{!hasNext}"/>&nbsp;&nbsp;
                    <apex:commandLink value="Last" action="{!last}"/>
                </div><br/>
                <apex:pageBlockTable value="{!SrList}" var="sr" id="pgblktab" >
                    <apex:column id="cl1"  headerValue="SR Name" width="8px">
                        <apex:commandLink value="{!sr.Name}" action="{!setParentRecord}" >
                           <apex:param name="nm" value="{!sr.Name}" assignTo="{!srname}"/>
                        </apex:commandLink>
                    </apex:column>
                    <apex:column id="cl2"  headerValue="VocCardNumber" value="{!sr.VOC_Card_Numb__c}" width="8px" />
                    <apex:column id="cl3"  headerValue="Owner Name"  value="{!sr.OwnerId}" width="8px"/>
                    <apex:column id="cl4"  headerValue="Created Date" value="{!sr.CreatedDate}" width="10px"/>
                    <apex:column id="cl5"  headerValue="Account Name" value="{!sr.Account_Name__c}" width="12px"/>
                    <apex:column id="cl6"  headerValue="Status" value="{!sr.Status__c}" width="8px"/>
                    <apex:column id="cl7"  headerValue="Customer Due Date" value="{!sr.Customer_Due_Date__c}" width="10px" />
                    <apex:column id="cl8" headerValue="Subject" value="{!sr.Subject__c}" width="8px" />
                   <!--  <apex:column id="cl10"  headerValue="Complexity label" value="{!sr.Complexity_Level__c}" width="8px"/> -->
                </apex:pageBlockTable>
            </apex:pageBlock>
        <script>
            function clearText(){
              var val=document.getElementById("pg:frm:inptxt").value='';
            }
        </script>
    </apex:form>
</apex:page>