    <apex:includeScript value="/soap/ajax/21.0/apex.js"/>

<apex:pageMessages />
<br/>
<div class="content">
<img src="/s.gif" alt="Custom" class="pageTitleIcon" title="Custom"/> 
<h1 class='pageType'>Entitlement</h1> <br/> {!$CurrentPage.parameters.Entitlementnum}
<br/>

</div><br/>

<apex:form id="Entrec1" >

<apex:pageBlock title="Entitlement Detail" id="Entrec2" >

<apex:pageBlockSection >

<apex:outputField value="{!Ent.Entitlement_Name__c}"/>
