<apex:outputField value="{!Ent.Comments__c}"/>
<apex:outputField value="{!Ent.End_Date__c}"/>
<apex:outputField value="{!Ent.Course__c}"/>
<apex:outputField value="{!Ent.Reference__c}"/>
<apex:outputField value="{!Ent.Product_Serial_Number__c}"/>
<br/>
<apex:outputField value="{!Ent.Serv_HON_Product_Name__c}"/>

</apex:pageBlockSection>

<apex:pageBlockSection title="Aircraft Information" collapsible="false">
<apex:outputField value="{!Ent.Fleet_Asset_Aircraft__c}"/>
<apex:outputField value="{!Ent.Serv_Aircraft_Serial_No__c}"/>
<apex:outputField value="{!Ent.Serv_Aircraft_Platform_and_Model__c}"/>
<br/>
<apex:outputField value="{!Ent.Platform__c}"/>
<br/>
<apex:outputField value="{!Ent.Serv_Model_Number_and_Serial_Number__c}"/>
<br/>
<apex:outputField value="{!Ent.Serv_Engine_APU_Model_and_Serial_Number__c }"/>
</apex:pageBlockSection>


<apex:pageBlockSection title="Services Information" collapsible="false"> 
<apex:outputField value="{!Ent.Serv_Data_Supplier__c}"/>
<apex:outputField value="{!Ent.Serv_Delivery_Type__c}"/>
<apex:outputField value="{!Ent.Serv_Format__c}"/>
<apex:outputField value="{!Ent.Serv_Media_Type__c}"/>
<apex:outputField value="{!Ent.Serv_Nav_Database_Descr__c}"/>
<apex:outputField value="{!Ent.Serv_NavDB_Ident__c}"/>
<apex:outputField value="{!Ent.Serv_Price_Plan__c}"/>
<br/>
<apex:outputField value="{!Ent.Serv_Prod_Descr__c}"/>
<br/>
<apex:outputField value="{!Ent.Serv_Subscription_Type__c}"/>
</apex:pageBlockSection>


<apex:pageBlockSection title="System Information" collapsible="false">
<apex:outputField value="{!Ent.Data_Load_Date__c}"/>
<apex:outputField value="{!Ent.Source_Created_Date__c}" />
<br/>
<apex:outputField value="{!Ent.Source_Modified_Date__c}"/>


</apex:pageBlockSection>

<apex:pageBlockSection title="Recurrence" collapsible="false" ></apex:pageBlockSection>
        
      <div id="Recurrencediv" style="display:block;">                                
            <br/>
                <fieldset style="border-color:#F5F5F5;">
                   <legend>Recurrence Pattern</legend>             
                 <br/>
                    <div>
                      <apex:selectRadio value="{!Recurencetype}" >
                           <apex:selectOption itemValue="Monthly" itemlabel="Monthly"/>
                           <apex:selectOption itemValue="Yearly" itemlabel="Yearly"/>
                           <apex:selectOption itemValue="Quarterly" itemlabel="Quarterly"/>
                      </apex:selectRadio>
                    </div> 
                    
              <div style="visibility:hidden;">
                 <apex:inputField value="{!Entitlement__c.End_Date__c}"/>
              </div>                                                
                </fieldset>                                                                                                                                                                                               
       </div>
            <br/>
       <div id="Recurrencediv1" style="display:block;">                                                
               <fieldset style="border-color:#F5F5F5;">
                    <legend>Range of recurrence</legend>             
                        <br/>                
                        <div style="width:60%;font-size:13px;">Start:<apex:inputText size="10" id="demo3" onfocus="DatePicker.pickDate(false, this , false);" value="{!datename1}" style="margin-bottom:5px;"/></div>
                         <div style="width:40%;margin-left: 18%;margin-top:-0.7cm;font-size:13px;">
                               
                           <input type="radio" id="Monthly1" checked="True" name="FreqRb1"  value="RecursMonthly1" onchange="ClearValues();"/>End after :&nbsp;&nbsp;&nbsp; <apex:inputText id="OccurNo" style="width:20px;margin-bottom:5px;" value="{!Noc}"/> &nbsp;&nbsp;&nbsp; occurences                                     
                            <br/> 
                             <input type="radio" id="Yearly1" name="FreqRb1"  value="RecursYearly1" onchange="ClearValues();"/>End by &nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;&nbsp;&nbsp;
                             <apex:inputText size="10" id="demo1" onfocus="DatePicker.pickDate(false, this , false);" value="{!datename}" style="margin-bottom:5px;"/>
                             <br/>                     
                         </div>                         
                </fieldset>                                                                                                                                                                                               
       </div>     

<apex:pageBlockButtons >
<apex:commandButton value="Save" action="{!save1}"/>
<apex:commandButton value="Cancel" action="{!Cancel}"/>
</apex:pageBlockButtons>

</apex:pageBlock>

</apex:form>

 <script>
      function ClearValues()
    {   
       if(document.getElementById('Monthly1').checked==false)
       document.getElementById('Entrec:Entrec1:Entrec2:OccurNo').value='';
           
       if(document.getElementById('Yearly1').checked==false)
       document.getElementById('Entrec:Entrec1:Entrec2:demo1').value='';
    }
  </script>
</apex:page>