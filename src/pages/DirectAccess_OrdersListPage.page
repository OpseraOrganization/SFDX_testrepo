<apex:page cache="false" controller="OrdersListPageController" showHeader="false" standardStylesheets="false">
 <apex:form >
  
  <html lang="en">
<head>
    <meta charset="utf-8"></meta>
    <meta name="viewport" content="width = device-width, initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no"></meta>
    <title> DRA Order Status </title>
    <meta name="description" content="DAR aero app"></meta>
    
    <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.DirectAccess_Assets, 'css/bootstrap.min.css')}"> </link>
    <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.DirectAccess_Assets, 'css/DAR-styles.css')}"> </link>
    
    <script type="text/javascript" src="{!URLFOR($Resource.DirectAccess_Assets, 'js/lib/jquery-3.2.1.min.js')}"> </script>
    <script type="text/javascript" src="{!URLFOR($Resource.DirectAccess_Assets, 'js/lib/bootstrap.min.js')}"> </script>
    
    
    <!--[if IE]>
        <script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script>
        $(document).ready(function(){
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.OrdersListPageController.SendRequest}',
                function(result, event){
                    var openliList = '';
                    for(i = 0; i < result.holdtime.length; i++)
                    {
                        openliList += '<li><div class="panel-group" id="accordion-'+(i+1)+'" role="tablist" aria-multiselectable="true"><div class="panel panel-default '+result.holdtime[i].colourCode+'"><div class="panel-heading" role="tab" id="headingOne"><h4 class="panel-title"><a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion-'+(i+1)+'" href="#c'+i+'" aria-expanded="false" aria-controls="collapseOne"><span class="DAR-os-label"> HON. Order </span><span class="DAR-os-id"> Spares - '+result.holdtime[i].orderNO+'</span></a></h4></div><div id="c'+i+'" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne"><div class="panel-body"><div class="container DAR-os-details"><div class="row"><label> PO Number </label><span> '+result.holdtime[i].custPO+' </span></div><div class="row"><label> Status </label><span> '+result.holdtime[i].statusHDR+' </span></div><div class="row"><label> Location </label><span> '+result.holdtime[i].siteID+' </span></div><div class="row"><label> Ordered on </label><span> '+result.holdtime[i].orderDATE+' </span></div><div class="row"><label> Estimated Ship Date  </label><span> '+result.holdtime[i].estShipDATE+' </span></div></div></div></div></div></div></li>';
                    }
                    $("#openOrdersUL").html(openliList);
                    
                    var openlength = result.holdtime.length;
                    var shippedliList = '';
                    for(i = 0; i < result.others.length; i++)
                    {
                        shippedliList += '<li><div class="panel-group" id="accordion-'+(openlength+i+1)+'" role="tablist" aria-multiselectable="true"><div class="panel panel-default '+result.others[i].colourCode+'"><div class="panel-heading" role="tab" id="headingOne"><h4 class="panel-title"><a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion-'+(openlength+i+1)+'" href="#b'+i+'" aria-expanded="false" aria-controls="collapseOne"><span class="DAR-os-label"> HON. Order </span><span class="DAR-os-id"> Spares - '+result.others[i].orderNO+'</span></a></h4></div><div id="b'+i+'" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne"><div class="panel-body"><div class="container DAR-os-details"><div class="row"><label> PO Number </label><span> '+result.others[i].custPO+' </span></div><div class="row"><label> Status </label><span> '+result.others[i].statusHDR+' </span></div><div class="row"><label> Location </label><span> '+result.others[i].siteID+' </span></div><div class="row"><label> Ordered on </label><span> '+result.others[i].orderDATE+' </span></div><div class="row"><label> Estimated Ship Date  </label><span> '+result.others[i].estShipDATE+' </span></div></div></div></div></div></div></li>';
                    }
                    $("#shippedOrdersUL").html(shippedliList);
                }
            );
        });
        
    </script>
    
</head>
<body>
    <div id="DAR-wrapper">
        <div class="DAR-content">
            <!-- page related content -->
            <section id="DAR-os-screen" class="container DAR-subcontent">
                <span class="DAR-back-nav"></span>
                <figure class="row DAR-map-socket DAR-cloud-bg"> <img /> </figure>
                <article class="row DAR-contact-block">
                    <h2 class="DAR-contact-heading"> Order Status </h2>
                    <span class="DAR-section-img DAR-order-status"> </span>
                </article>
                <div class="row DAR-os-container ">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs DAR-tab DAR-section-bg" id="DAR-tab" role="tablist">
                        <li role="presentation" class="active"><a href="#open-orders" aria-controls="home" role="tab" data-toggle="tab"> Open Orders </a></li>
                        <li role="presentation"><a href="#shipped-orders" aria-controls="profile" role="tab" data-toggle="tab"> Shipped Orders </a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="open-orders">
                            <ul class="list-unstyled" id="openOrdersUL">
                                
                            </ul>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="shipped-orders">
                            <ul class="list-unstyled" id="shippedOrdersUL">
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script type="text/javascript" src="assets/js/DAR-scripts.js"></script>
    <script>
        (function(){
            //DAR;
        })();
    </script>
</body>
</html>
  <apex:insert name="footer">
        <c:honeywellFooter />
</apex:insert>

  </apex:form>
</apex:page>