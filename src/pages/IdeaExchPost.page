<apex:page sidebar="false" showHeader="false" standardStylesheets="false" title="GOLD WEEK 2015" cache="false" docType="html-5.0" applyHtmlTag="false" standardController="idea" extensions="IdeaExchPostcls">
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>GOLD WEEK 2015 | New Idea</title>    
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0" />
    <meta name="apple-mobile-web-app-title" content="GOLD WEEK" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <link rel="icon" href="{!URLFOR($Resource.goldweek_resources,'img/favicon.png')}" />
    
    <!--    Bootstrap CSS -->
    <link href="{!URLFOR($Resource.goldweek_resources,'css/bootstrap.min.css')}" rel="stylesheet" media="screen"/>
    <link href="{!URLFOR($Resource.goldweek_resources,'css/goldweek.min.css')}" rel="stylesheet" media="screen"/>
    
    <!--   Images for iOS   -->
    <link href="{!URLFOR($Resource.goldweek_resources,'img/gold_144x144.png')}" rel="apple-touch-icon-precomposed" sizes="144x144" />
    <link href="{!URLFOR($Resource.goldweek_resources,'img/gold_114x114.png')}" rel="apple-touch-icon-precomposed" sizes="114x114" />
    <link href="{!URLFOR($Resource.goldweek_resources,'img/gold_72x72.png')}" rel="apple-touch-icon-precomposed" sizes="72x72" />
    <link href="{!URLFOR($Resource.goldweek_resources,'img/gold_57x57.png')}" rel="apple-touch-icon-precomposed" />
        
    <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.goldweek_resources,'css/addtohomescreen.css')}" />
    <script src="{!URLFOR($Resource.goldweek_resources,'js/addtohomescreen.min.js')}"></script>    
   
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->    

</head>

<body>

<div class="container">

    <c:PAC_IDEAS_header />

    <form class="form-horizontal">
        <div class="form-group">
            <label for="idea_title" class="col-sm-3 control-label">Title</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="idea_title" required="required" placeholder="Name your Idea" />
            </div>
        </div>
        <div class="form-group">
            <label for="idea_descr" class="col-sm-3 control-label">Description</label>
            <div class="col-sm-9">
              <textarea class="form-control" id="idea_descr" required="required" placeholder="Elaborate" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="idea_enter" class="col-sm-3 control-label">Enterprise</label>
            <div class="col-sm-9">
                <select class="form-control" id="idea_enter">
                    <optgroup label="Enterprise">
                        <option value="Aero Services">Aero Services</option>
                        <option value="Air Thermal Systems">Air Thermal Systems</option>
                        <option value="APU">APU</option>
                        <option value="Bendix King">Bendix King</option>
                        <option value="Cockpit Systems">Cockpit Systems</option>
                        <option value="Electrical Power">Electrical Power</option>
                        <option value="Enterprise">Enterprise</option>
                        <option value="FM&amp;#38;T">FM&amp;T</option>
                        <option value="HTSI">HTSI</option>
                        <option value="Lighting">Lighting</option>
                        <option value="Mechanical Components">Mechanical Components</option>
                        <option value="Navigation Sensors &amp;#38; Space">Navigation Sensors &amp; Space</option>
                        <option value="Propulsion">Propulsion</option>
                        <option value="Safety &amp;#38; Information Management">Safety &amp; Information Management</option>
                        <option value="Space">Space</option>
                        <option value="Wheels &amp;#38; Brakes">Wheels &amp; Brakes</option>
                        <option value="Other">Other</option>
                    </optgroup>
                    <optgroup label="Function">
                        <option value="C&amp;PS">C&amp;PS</option>
                        <option value="ISC">ISC</option>
                        <option value="IT">IT</option>
                        <option value="Licensing">Licensing</option>
                        <option value="Portal">Portal</option>
                    </optgroup>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6 col-xs-12">
              <button type="submit" class="btn btn-default btn-lg btn-block" data-loading-text="Submitting...">Submit</button>
            </div>
        </div>
    </form>
  
</div> <!-- /container -->

<!--  Loader Icon  -->
<div class="hon-loader">
    <div class="hon-loader-overlay"></div>
    <div class="spinner">
      <div class="double-bounce1"></div>
      <div class="double-bounce2"></div>
    </div>
</div>

<script src="{!URLFOR($Resource.goldweek_resources,'js/jquery.min.js')}"></script>
<script src="{!URLFOR($Resource.goldweek_resources,'js/bootstrap.min.js')}"></script>
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="{!URLFOR($Resource.goldweek_resources,'js/ie10-viewport-bug-workaround.js')}"></script>
<script src="{!URLFOR($Resource.goldweek_resources,'js/goldweek.js')}"></script>

<script type="text/javascript">

    $(document).ready(function(){

        $("form").submit(function(event) {

            event.preventDefault();
            $(".hon-loader").show();
            var title = $("#idea_title").val();
            var description = $("#idea_descr").val();
            var enterprise = $("#idea_enter option:selected").text();
            var categ = "other";

            $(".btn-block").button("loading");
            IdeaExchPostcls.insertpost(categ,title,description,enterprise,function(result, event){
                if(event.status) {
                    if(result.length != 0) {
                        window.top.location.replace('/apex/IdeaExchIdeas#my');
                    }
                    else {
                        $(".hon-loader").hide();
                        $(".btn-block").button("reset");
                    }
                }
            });

        });

    });

</script>

</body>
</html>
</apex:page>