<apex:page controller="QuotesurveyController" showHeader="false">
   <apex:pageBlock >
  <apex:outputPanel styleClass="hidemsg">
   <apex:pageMessages rendered="{!showerror == true}"/>
   </apex:outputPanel>
   </apex:pageBlock>
    <style>
    
        .nowrap{
        white-space: nowrap ;
        }
        
    
        .centerT {
    margin: auto;
    width: 60%;
    padding: 10px;
}
        .popup
        {
            background-color: white;
            border-width: 2px;
            border-style: solid;
            z-index: 9999;
            left: 50%;
            padding:10px;
            position: absolute;
            width: 500px;
            margin-left: -250px;
            top:80px;
        }
        
        .hidemsg
        {
           height: 200px;
           //width: 400px;
           

           position: fixed;
           top: 50%;
           left: 52%;
           margin-top: -100px;
           margin-left: -200px;
           font-size: 150%;
        }
         
        
        
        
        
        
    </style>
    <script language="javascript" type="text/javascript">
    
    
         function hidePageContent(){
            
         document.getElementById('{!$Component.theForm}').style.display ='none';
           
            
         }
    function showMsg(){
         var x=  document.getElementById("hidemsg");
       if (x.style.display === "none") {
        x.style.display = "block";
    } 
    }
             
</script>
    
   <apex:form id="theForm" rendered="{!showerror == false}">
   
         <div style="text-align:center"><br/><h1>Your Quote Survey</h1><br/><br/>
    </div> 
     <div class="centerT">    
     
         
         <div>
             <span class="nowrap"><apex:outputLabel for="easy" Value="1. To what extent do you agree with the following statement: Honeywellâ€™s order management system made it easy for me to resolve my inquiry ?"/ ></span><i> (1 being very unsatisfied and 7 being very satisfied)</i>                
                <!--<apex:inputField id="easy" value="{!obj.Made_it_easy_to_place_order__c}"/>-->
                <apex:selectRadio layout="lineDirection" value="{!obj.Made_it_easy_to_place_order__c}" >
                <apex:selectOptions value="{!values}"></apex:selectOptions>
                </apex:selectRadio>
         </div>
         <br/>
         
         <div>
             <span class="nowrap"><apex:outputLabel for="resolve" Value="2. Did you have to contact Honeywell with questions regarding your quote ?"/></span><br/><br/>
                <apex:inputField id="resolve" value="{!obj.Are_You_Contact_Honeywell__c}">
                <apex:actionSupport event="onchange" reRender="theForm"/>
                </apex:inputField>
         </div>
         <div>
             <br/><apex:outputLabel Value="3. If yes, how many times ?" rendered="{!obj.Are_You_Contact_Honeywell__c== 'Yes'}"/><br/><br/>
             <apex:inputField value="{!obj.How_Many_Times__c}" rendered="{!obj.Are_You_Contact_Honeywell__c=='Yes'}"/>

         </div> 
         
          <div>
              <span class="nowrap"><apex:outputLabel Value="3. Overall how satisfied are you with the support provided by Honeywell Customer Support on your inquiry ?" rendered="{!obj.Are_You_Contact_Honeywell__c==''}" /></span><span class="nowrap"><apex:outputLabel Value="3. Overall how satisfied are you with the support provided by Honeywell Customer Support on your inquiry ?" rendered="{!obj.Are_You_Contact_Honeywell__c=='No'}" /></span><apex:outputLabel Value="(1 being very unsatisfied and 7 being very satisfied)" rendered="{!obj.Are_You_Contact_Honeywell__c==''}" style="font-style:italic"/><apex:outputLabel Value="(1 being very unsatisfied and 7 being very satisfied)" rendered="{!obj.Are_You_Contact_Honeywell__c=='No'}" style="font-style:italic"/>
              <br/><span class="nowrap"><apex:outputLabel Value="4. Overall how satisfied are you with the support provided by Honeywell Customer Support on your inquiry ?" rendered="{!obj.Are_You_Contact_Honeywell__c=='Yes'}"/></span><apex:outputLabel Value="(1 being very unsatisfied and 7 being very satisfied)" rendered="{!obj.Are_You_Contact_Honeywell__c=='Yes'}" style="font-style:italic"/>
             
              <apex:selectRadio layout="lineDirection" value="{!obj.Are_Satisfied_Honeywell_Support__c}" >
                <apex:selectOptions value="{!Values}"></apex:selectOptions>
                </apex:selectRadio>
         </div> 
              
         </div>
         
        
        
         <div align="center">
            
             <br/><br/>
                     
          <apex:commandButton value="Submit" status="mySaveStatus1" action="{!save}" oncomplete="hidePageContent();showMsg();"/>
           
             
         </div>
         
  
  </apex:form>
        <apex:form id="msg">
              <div id="hidemsg" style="display:none;" class="hidemsg">
            
                  {!$Label.successMsg}
                  
                  <!--<apex:commandButton value="Close" onclick="window.open('',_self,'');window.close();" />-->
         </div>
            
       </apex:form>
      <apex:insert name="footer">
        <c:honeywellFooter1 />
</apex:insert>
</apex:page>