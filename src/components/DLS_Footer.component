    // Below functionality where we load the header and Footer content received from ajax call.
    //Start:  Header-footer implementation - changes done by PRAMOD HC (header and footer syndeciate with AEM)
    
    var header_footer_cachedJSON = JSON.parse(localStorage.getItem('cachedJSON'));
    var  header_footer_cachedJSON_Time= JSON.parse(localStorage.getItem('timecachedJSON'));
    
    if(header_footer_cachedJSON == null || header_footer_cachedJSON_Time== null || (new Date().getTime() > ( header_footer_cachedJSON_Time + 3600000))){
        getheader_footerJSON();
    }
    else{   
        setjsonContent(header_footer_cachedJSON);
        loadCssFromAem();
        setTimeout(renderHeaderFooter,400);
         setTimeout(loadjsfromAem,800);
        //}
    }
    
    
    // Making ajax call to get the header footer html content
    function getheader_footerJSON(){
        
        $.ajax({   
            type : "GET",
            url: aemHeader_Footer_url,
            crossDomain: true,
            dataType: "json",     
            success: function (data) {
                setjsonContent(data);
                localStorage.setItem('cachedJSON', JSON.stringify(data));
                localStorage.setItem('timecachedJSON', new Date().getTime());
                loadCssFromAem();
                setTimeout(renderHeaderFooter,600);
                setTimeout(loadjsfromAem,1000);
                
                
            }, 
            error : function(){
                console.log("Ajax call to AEM has been Failed. Header and  Footer will not  be rendered. Please contact Administrator");
            }
        });
    }
    
    // Setting the content of json response into respective html elements of the page.
    function setjsonContent(data){
        
        cssResourcePaths = data.cssResourcePaths;
        jsResourcePaths = data.jsResourcePaths;
        headerMarkup = data.headerMarkup;
        footerMarkup = data.footerMarkup;
        
    }
    
    // Loading the css to head tag stored in cssResourcePaths variable
    function loadCssFromAem(){
        var css = '';
        if(cssResourcePaths !="undefined" && cssResourcePaths.length>0){
            for(i = 0; i<cssResourcePaths.length; i++) {
                css += '<link rel="stylesheet" href="' + cssResourcePaths[i] + '" type="text/css"> ';
                
            }
            $('head').append((css)); 
        }
    }  
    
   // Loading the js to head tag stored in jsResourcePaths variable
function loadjsfromAem(){
    var jsscript = '';
    if(jsResourcePaths !="undefined" && jsResourcePaths.length>0){
        for(i = 0; i<jsResourcePaths.length; i++) {
            jsscript += '<script type="text/javascript" src="' + jsResourcePaths[i] + '"/>' ;                     
            } 
        $('head').append(jsscript); 
    }
}
   
    
    // Adding the html content received from json to respective div tag
    function renderHeaderFooter (){
        
        // Adding the HTML content to header div
        $("#myAeroNavMnuDvNew").append(replace(headerMarkup));
        // Adding the HTML content to footer div
        $("#myAeroFooterDvNew").append(replace(footerMarkup));
    }
    
    // Parsing the html content received from json
    function replace(s){
        var myEscapedJSONString = s.replace(/\\n|\\t|\\r|\\|/g, '');    
        return myEscapedJSONString;
    }
