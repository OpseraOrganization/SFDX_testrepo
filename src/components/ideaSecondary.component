                <ideas:listOutputLink communityId="{!communityId}" page="{!ideaListPage}" category="Automation and Control Solutions" sort="{!sortForFilters}" styleClass="italicText">Automation and Control Solutions</ideas:listOutputLink>
                <br></br>
                <br></br>
                <ideas:listOutputLink communityId="{!communityId}" page="{!ideaListPage}" category="Performance Materials and Technologies" sort="{!sortForFilters}" styleClass="italicText">Performance Materials and Technologies</ideas:listOutputLink>
