                <br></br>
                <br></br>
                &nbsp;&nbsp;<ideas:listOutputLink communityId="{!communityId}" page="{!ideaListPage}" category="Electrical" sort="{!sortForFilters}" styleClass="boldText">Electrical</ideas:listOutputLink>
                <br></br>
                <br></br>
                &nbsp;&nbsp;<ideas:listOutputLink communityId="{!communityId}" page="{!ideaListPage}" category="Other" sort="{!sortForFilters}" styleClass="boldText">Other</ideas:listOutputLink>
                <br></br>
