public class ApprovalRequired {    String result = null;    ProcessInstanceWorkitem[] prInstWItem;    ProcessInstance[] prInst;    public ApprovalRequired(ApexPages.StandardController controller) {        String gpId=ApexPages.currentPage().getParameters().get('id');        prInst = [Select Id from ProcessInstance where TargetObjectId=:gpId and Status='Pending'];        if(prInst.size()>0){            prInstWItem = [select Id,OriginalActorId from ProcessInstanceWorkitem where ProcessInstanceId=:prInst[0].Id];         }    }    public List<SelectOption> getStatus() {        List<SelectOption> options = new List<SelectOption>();        options.add(new SelectOption('Approve','Approve'));        options.add(new SelectOption('Reject','Reject'));           return options;    }    public Pagereference Send(){        Approval.ProcessWorkitemRequest prWkItem = new Approval.ProcessWorkitemRequest();        prWkItem.setWorkitemId(prInstWItem[0].Id);        prWkItem.setComments('Approving request.');         if(result=='Approve')        prWkItem.setAction('Approve');         else        prWkItem.setAction('Reject');        Approval.ProcessResult prResult = Approval.process(prWkItem);        return null;    }    public String getResult() {        return this.result;    }    public void setResult(String res) { this.result = res; }}