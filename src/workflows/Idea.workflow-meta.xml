<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Auto_trigger_email_message</fullName>
        <description>Auto-trigger email message</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderAddress>aerodonotreply@honeywell.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/IDEA_Exchange_Template</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Status_on_Idea_Creation</fullName>
        <field>Status</field>
        <literalValue>Submitted</literalValue>
        <name>Update Status on Idea Creation</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>IDEA Exchange</fullName>
        <actions>
            <name>Auto_trigger_email_message</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Workflow to trigger email to Idea owner and Creator on status changes</description>
        <formula>Notify_Idea_Creator__c == true &amp;&amp;   NOT(ISCHANGED(NumComments ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Idea Status on Creation</fullName>
        <actions>
            <name>Update_Status_on_Idea_Creation</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Idea.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Idea Status on Creation</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Test Idea</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Idea.Status</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
