    <rules>
        <fullName>Entitlement Notify prior 30 days</fullName>
        <active>false</active>
        <description>activity to be auto created and an email notification to the owner 30 days before the entitlement start date.</description>
        <formula>AND( NOT(ISNULL(Entitlement_Start_Date__c)),   NOT(ISPICKVAL(Entitlement_Type__c , &quot;Training Discount&quot;)), NOT(ISPICKVAL(Entitlement_Type__c , &quot;Training &quot;)), Entitlement_Start_Date__c  &gt;  TODAY(),   NOT(ISPICKVAL(Contract_Number__r.Status , &quot;Expired&quot;))    )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Activity_assigned_to_you</name>
                <type>Task</type>
            </actions>
            <offsetFromField>Entitlement__c.X30_days_Before_Start_Date__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Entitlement to Case Creation</fullName>
        <active>true</active>
        <description>Create time dependent action to create case in future time using Case creation check box</description>
        <formula>AND(NOT(ISNULL(Entitlement_Start_Date__c)),NOT(ISNULL(Contract_Number__c)))</formula>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Case_Creation_Update</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Entitlement__c.Entitlement_Start_Date__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>On Usage Cap Update</fullName>
        <actions>
            <name>Update_Usage_Count</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISNEW() || ISCHANGED(Usage_Cap__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
