    <rules>
        <fullName>HBS Case Escalation for META</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>GDMFSL_Service Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Region__c</field>
            <operation>equals</operation>
            <value>META</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.OwnerId</field>
            <operation>equals</operation>
            <value>HBS META Customer Support</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>GDMFSL_HBS_Case_Escalation_for_META</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Case.GDMFSL_Trigger_Time_10__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>GDMFSL_HBS_Case_Escalation_for_META_Level_2</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Case.GDMFSL_Trigger_Time_20__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
