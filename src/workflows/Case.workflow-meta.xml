            <operation>equals</operation>
            <value>Email</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.OwnerId</field>
            <operation>equals</operation>
            <value>HBS META Customer Support</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.OwnerId</field>
            <operation>equals</operation>
            <value>HBS US South Customer Support</value>
        </criteriaItems>
        <description>Notification sent to the customer when a new case is received for HBS US South or META Customer Support Team (Email to Case)</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
