<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_alert_for_Custom_Task_record_Status_completed</fullName>
        <description>Email alert for Custom Task record Status completed</description>
        <protected>false</protected>
        <recipients>
            <field>EmailId__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Case_Creation_Templates/Email_Alert_For_Custom_Task_Status_Completed</template>
    </alerts>
    <alerts>
        <fullName>Email_alert_for_Custom_Task_record_created</fullName>
        <description>Email alert for Custom Task record created</description>
        <protected>false</protected>
        <recipients>
            <recipient>ACT_SPEX_Group</recipient>
            <type>group</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Case_Creation_Templates/Email_Alert_For_Custom_Task_Created</template>
    </alerts>
    <rules>
        <fullName>Custom Task Status equals Completed</fullName>
        <actions>
            <name>Email_alert_for_Custom_Task_record_Status_completed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Custom_Task__c.Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Task Created</fullName>
        <actions>
            <name>Email_alert_for_Custom_Task_record_created</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Custom_Task__c.CreatedById</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <criteriaItems>
            <field>Custom_Task__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>SPEX Repair TAT Form</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
