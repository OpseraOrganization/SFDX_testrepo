<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>SendMail_PMAttendees</fullName>
        <description>This work flow email alert is to send email to the Planned Meeting Attendees when the Planned Meeting status is Requested</description>
        <protected>false</protected>
        <recipients>
            <field>Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <recipients>
            <field>User__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>D_S_Email_Templates/SendMails_Approved</template>
    </alerts>
    <rules>
        <fullName>Send Mail if PM Status is Requested</fullName>
        <actions>
            <name>SendMail_PMAttendees</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Planned_Meeting_Attendee__c.Email_Flag__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Planned_Meeting_Attendee__c.Send_Email_Notification__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Planned_Meeting_Attendee__c.Planned_Meeting_Status__c</field>
            <operation>equals</operation>
            <value>Requested</value>
        </criteriaItems>
        <description>This workflow rule is to send mail to the Planned Meeting Attendees when the status of the Planned Meeting is Requested</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
