    <rules>
        <fullName>New Past due date notification to Opportunity phase owner</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity_Gate__c.Completion_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity_Gate__c.Actual_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
