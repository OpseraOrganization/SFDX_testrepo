            <field>Opportunity_Gate__c.Is_Opportunity_Closed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.SBU__c</field>
            <operation>notEqual</operation>
            <value>D&amp;S</value>
        </criteriaItems>
        <description>11/22- Condition added to remove tollgates from Closed won, lost, canceled and Not applicable opportunities.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Phase_Gate_Due</name>
                <type>Task</type>
            </actions>
            <offsetFromField>Opportunity_Gate__c.Completion_Date__c</offsetFromField>
            <timeLength>32</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
