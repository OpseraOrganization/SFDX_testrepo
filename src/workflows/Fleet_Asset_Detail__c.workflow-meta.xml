<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Fleet_Aircraft_has_been_retired</fullName>
        <ccEmails>AircraftLocationSalesOps@Honeywell.com</ccEmails>
        <description>Fleet Aircraft has been retired</description>
        <protected>false</protected>
        <senderAddress>aerodonotreply@honeywell.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Fleet_Aircraft_has_been_retired</template>
    </alerts>
    <fieldUpdates>
        <fullName>BGA_ASM_field_Update</fullName>
        <description>BGA ASM field gets populated automatically</description>
        <field>BGA_ASM__c</field>
        <name>BGA ASM field Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Fleet_Asset_Aircraft_Order_Status</fullName>
        <field>Status__c</field>
        <literalValue>On Order</literalValue>
        <name>Fleet Asset Aircraft Order Status</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>ASM Field auto update</fullName>
        <actions>
            <name>BGA_ASM_field_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>On change of Base city, the BGA ASM field should be automatically populated for Fleet Asset aircraft object</description>
        <formula>ISCHANGED( Base_City__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Fleet Aircraft has been retired</fullName>
        <actions>
            <name>Fleet_Aircraft_has_been_retired</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Fleet_Asset_Detail__c.Status__c</field>
            <operation>equals</operation>
            <value>Retired</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Fleet Asset Aircraft Order Status</fullName>
        <actions>
            <name>Fleet_Asset_Aircraft_Order_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Fleet_Asset_Detail__c.Status__c</field>
            <operation>equals</operation>
            <value>Order</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
