<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>AQI_Created_alert</fullName>
        <description>AQI Created alert</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <field>Agent_Coached__c</field>
            <type>userLookup</type>
        </recipients>
        <recipients>
            <field>Coach_name__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Technical_GTO_templates/AQI_created</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Agents_Manager</fullName>
        <description>Update Agents Manager</description>
        <field>Agent_s_Manager__c</field>
        <formula>Agent_Coached__r.Managers_Name__r.Full_Name__c</formula>
        <name>Update Agents Manager</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_KCS_Role</fullName>
        <description>Update KCS Role</description>
        <field>Agent_s_KCS_role__c</field>
        <formula>Text(Agent_Coached__r.KCS_level__c)</formula>
        <name>Update KCS Role</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Tech_Support_Level</fullName>
        <description>Update Tech Support Level</description>
        <field>Agent_s_Tech_Support_Level__c</field>
        <formula>text( Agent_Coached__r.Support_Level__c )</formula>
        <name>Update Tech Support Level</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>AQI created</fullName>
        <actions>
            <name>AQI_Created_alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Article_Quality_Index2__c.KnowledgeArticleId__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>AQI created</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Send email to Coach on AQI form Submission</fullName>
        <active>false</active>
        <formula>AND(Send_Email_to_Agent__c = TRUE, 
PRIORVALUE(Send_Email_to_Agent__c) = FALSE)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Setting Agent Paramaters in Article Quality Index</fullName>
        <actions>
            <name>Update_Agents_Manager</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_KCS_Role</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Tech_Support_Level</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Setting Agent Paramaters in Article Quality Index</description>
        <formula>or(ISNEW(), Ischanged(  Agent_Coached__c  ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
