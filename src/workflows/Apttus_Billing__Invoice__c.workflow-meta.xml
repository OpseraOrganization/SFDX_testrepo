    <rules>
        <fullName>APTS Approved Invoice Status</fullName>
        <actions>
            <name>APTS_Update_Invoice_status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.Apttus_Billing__Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.APTS_Integration_Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.APTS_DMR_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.APTS_Billing_Document_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>APTS_AutoDMR</fullName>
        <actions>
            <name>APTS_DMROutbount</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <formula>AND(ISPICKVAL(Apttus_Billing__Status__c,&apos;Submitted&apos;), ISPICKVAL(PRIORVALUE(Apttus_Billing__Status__c),&apos;Draft&apos;))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>APTS_DuplicateBillingDocumentNumInvoice</fullName>
        <actions>
            <name>APTS_Duplicate_Billing_Doc_Num_For_Invoice</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND (NOT(ISBLANK(PRIORVALUE(APTS_Billing_Document_Number__c))),  (ISCHANGED(APTS_Billing_Document_Number__c)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>APTS_InvoiceRunComplete</fullName>
        <actions>
            <name>InvoiceSimulateOAPTS_InvoicerderOutbound</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <formula>ISPICKVAL( APTS_Integration_Status__c , &apos;To be Processed&apos;) &amp;&amp; ISPICKVAL( Apttus_Billing__Status__c,&apos;Draft&apos;)&amp;&amp;  IF((ISBLANK(Price_List__c) || ISNULL(Price_List__c)), TRUE, (!CONTAINS(UPPER(Price_List__c), &apos;ASPIRE&apos;)))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>APTS_SendEmailInvoiceCancelled</fullName>
        <actions>
            <name>FE_Invoice_Cancelled</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.Apttus_Billing__Status__c</field>
            <operation>equals</operation>
            <value>Cancelled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Apttus_Billing__Invoice__c.APTS_DMR_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>APTS_SendInvoiceAttachment</fullName>
        <actions>
            <name>APTS_SendInvoiceAttachment</name>
            <type>OutboundMessage</type>
        </actions>
        <active>false</active>
        <formula>ISCHANGED( APTS_LatestAttachmentId__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>APTS_SendJIRaTransaction</fullName>
        <actions>
            <name>APTS_Send_JIRA_Transaction</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( APTS_JIRA_Transaction_Date__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
