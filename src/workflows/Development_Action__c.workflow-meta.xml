    <rules>
        <fullName>Notice to Rep of upcoming due date on Development Action</fullName>
        <active>true</active>
        <formula>ISBLANK(Actual_Completion_Date__c) &amp;&amp;  !ISBLANK(Target_Completion_Date__c)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Sales_Competency_Notice_to_Rep_of_upcoming_due_date_on_Development_Action</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Development_Action__c.Target_Completion_Date__c</offsetFromField>
            <timeLength>-7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
