    <rules>
        <fullName>Clear Closed Date when Status is not  Done</fullName>
        <actions>
            <name>Clear_Close_Date_when_Status_is_not_Done</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Done</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact_Plan__c.Date_Time_Closed__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Cancelled</value>
        </criteriaItems>
        <description>Clear Closed Date when Status is not Done</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Contact Plan schedule for Close - 3 day notification</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact_Plan__c.Expected_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Workflow to send email notification to Contact Owner 3 days before close</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Notification_Email_to_the_contact_plan_owner_after_3_days_of_the_expected_date</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Contact_Plan__c.Expected_Date__c</offsetFromField>
            <timeLength>3</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Contact Plan shedule for New</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact_Plan__c.Expected_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Workflow to send email notification to Contact Owner 1 Week on Expected Date</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Notification_email_to_the_contact_plan_owner_1_week_in_advanc</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Contact_Plan__c.Expected_Date__c</offsetFromField>
            <timeLength>-7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Update Closed Date when Status is Done</fullName>
        <actions>
            <name>Update_Close_Date_when_Status_is_Done</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>equals</operation>
            <value>Done</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact_Plan__c.Status__c</field>
            <operation>equals</operation>
            <value>Cancelled</value>
        </criteriaItems>
        <description>Update Closed Date when Status is Done</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Update Completed on time Checkbox</fullName>
        <actions>
            <name>Update_completed_on_time_checkbox</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>DATEVALUE(Date_Time_Closed__c )&lt;=  Expected_Date__c</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update Completed on time Checkbox to false</fullName>
        <actions>
            <name>Update_Completed_on_time_Checkbox_to_fal</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>DATEVALUE(Date_Time_Closed__c )&gt; Expected_Date__c</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update Open Past Due date</fullName>
        <active>false</active>
        <description>when the FSE is not closed on the exptected date ,the field Open Past Due date is set to true</description>
        <formula>AND(Expected_Date__c &lt; TODAY(),not( ISPICKVAL(Status__c,&apos;Done&apos;) ))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
