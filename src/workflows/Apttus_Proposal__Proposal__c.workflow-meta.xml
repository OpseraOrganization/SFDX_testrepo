<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>APTS_SetSimulateOrderDate</fullName>
        <field>APTS_SimulateOrderRequested__c</field>
        <formula>NOW()</formula>
        <name>APTS_SetSimulateOrderDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>APTS_SetSimulateOrderResult</fullName>
        <field>APTS_SimulateOrderResult__c</field>
        <name>APTS_SetSimulateOrderResult</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Null</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>APTS_SetSimulateOrderStatus</fullName>
        <field>APTS_SimulateOrderStatus__c</field>
        <literalValue>To be Processed</literalValue>
        <name>APTS_SetSimulateOrderStatus</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Simulate_Order_Status</fullName>
        <field>APTS_SimulateOrderStatus__c</field>
        <literalValue>Required</literalValue>
        <name>Update Simulate Order Status</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <outboundMessages>
        <fullName>APTS_SimulateOrder</fullName>
        <apiVersion>41.0</apiVersion>
        <endpointUrl>https://it.api.honeywell.com/sfdc/aero/apttus/proposal/prelim</endpointUrl>
        <fields>Id</fields>
        <includeSessionId>false</includeSessionId>
        <integrationUser>karanatakam.ganguraju@honeywell.com.aero</integrationUser>
        <name>Simulate Order</name>
        <protected>false</protected>
        <useDeadLetterQueue>false</useDeadLetterQueue>
    </outboundMessages>
    <rules>
        <fullName>APTS_AutoSendOutboundSimulateOrder</fullName>
        <actions>
            <name>APTS_SetSimulateOrderDate</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SetSimulateOrderResult</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SetSimulateOrderStatus</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SimulateOrder</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <formula>ISPICKVAL(APTS_SimulateOrderStatus__c , &apos;To be Processed&apos;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>APTS_AutoSimulateOrderOnFinalize</fullName>
        <actions>
            <name>APTS_SetSimulateOrderDate</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SetSimulateOrderResult</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SetSimulateOrderStatus</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>APTS_SimulateOrder</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( Apttus_QPConfig__ConfigurationFinalizedDate__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>APTS_AutoSimulateOrderUpdate</fullName>
        <actions>
            <name>Update_Simulate_Order_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Sends &quot;Simulate Order&quot; to MuleSoft on Account, Bill To, Ship To fields change</description>
        <formula>AND(  APTS_LineItemCount__c &gt; 0  ,OR(ISCHANGED(Apttus_Proposal__Account__c), ISCHANGED( Apttus_QPConfig__ShipToAccountId__c),ISCHANGED( Apttus_QPConfig__BillToAccountId__c))  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
