    <rules>
        <fullName>Content Approved Checkbox to be unchecked</fullName>
        <actions>
            <name>Uncheck_Content_Approved_Checkbox</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>RMU_VALUE__c.On_Expiry__c</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
