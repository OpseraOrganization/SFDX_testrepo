<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Account_Cross_Reference</fullName>
        <field>Account_Cross_Reference__c</field>
        <formula>Site_Code__c  &amp;  External_Account_ID__c</formula>
        <name>Account Cross Reference</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Account_Cross_Reference_Name</fullName>
        <field>Name</field>
        <formula>text( Site_Name__c ) &amp; &quot;-&quot; &amp; External_Account_ID__c</formula>
        <name>Account Cross Reference Name</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_SBL_Account_Row_ID</fullName>
        <field>Sbl_Account_Row_ID__c</field>
        <formula>Account_Name__r.Sbl_Account_Row_Id__c</formula>
        <name>Update SBL Account Row ID</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Account Cross Reference</fullName>
        <actions>
            <name>Account_Cross_Reference</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Account_Cross_Reference_Name</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This work flow is to update Account Cross Reference with sitecode+externalAccountId</description>
        <formula>or( 
 ISCHANGED( Site_Name__c ), 
 ISCHANGED(  External_Account_ID__c ), 
 ISCHANGED( Name ) 
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update SBL Account Row ID</fullName>
        <actions>
            <name>Update_SBL_Account_Row_ID</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>or(
ISCHANGED(  Account_Name__c ),
ISCHANGED( Sbl_Account_Row_ID__c ),
ISBLANK( Sbl_Account_Row_ID__c ),
ISNULL( Sbl_Account_Row_ID__c )   
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
