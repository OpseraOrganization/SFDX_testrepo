<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Delegate_notification</fullName>
        <description>Delegate notification</description>
        <protected>false</protected>
        <recipients>
            <field>Delegate_Email_1__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Delegate_Email_2__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Delegate_Email_3__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Delegate_Email_4__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Delegate_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>eGreensheet_EmailTemplates/Notification_to_Delegate</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Email_Field</fullName>
        <field>Email__c</field>
        <formula>Approver_Name__r.Email</formula>
        <name>Update Email Field</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Email of Approver</fullName>
        <actions>
            <name>Update_Email_Field</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Approver__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>The email on the approver record will come from the user record automatically.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>notify</fullName>
        <actions>
            <name>Delegate_notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Approver__c.Out_of_Office__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Approver__c.Mail_Alert__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
