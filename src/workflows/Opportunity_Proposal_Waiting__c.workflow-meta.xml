    <rules>
        <fullName>DS Waiting set to New</fullName>
        <actions>
            <name>DS_Waiting_set_to_New</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>or(
ISCHANGED( Comments__c ),
ISCHANGED( Rejected__c  ),
ISCHANGED( Supplier_Name__c ),
ISCHANGED( Supplier_Estimated_Cost__c)
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
