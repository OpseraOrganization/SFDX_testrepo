        <active>true</active>
        <formula>AND(RecordType.Name=&quot;ISC (Vendor Analysis)&quot;,  ISPICKVAL(PRIORVALUE(Waiting_Status__c),&quot;New&quot;),  ISPICKVAL(Waiting_Status__c, &quot;Reviewed&quot;))</formula>
