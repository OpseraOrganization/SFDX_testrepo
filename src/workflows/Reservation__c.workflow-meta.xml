    <rules>
        <fullName>HwTrng_ClassCancelled</fullName>
        <actions>
            <name>HwTrng_Class_Cancelled</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Reservation__c.Reservation_Status__c</field>
            <operation>equals</operation>
            <value>Cancel</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reservation__c.Class_Cancelled_by_Admin__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>HwTrng_CourseRescheduled</fullName>
        <actions>
            <name>HwTrng_Course_Rescheduled</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>HwTrng_Reschedule</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>Rescheduled__c =True &amp;&amp; Not( ISNEW())&amp;&amp; Not( ISPICKVAL( Reservation_Status__c , &apos;Cancel&apos;))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
