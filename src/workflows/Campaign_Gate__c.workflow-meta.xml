<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>New Past due date notification to Campaign Phase owner</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Campaign_Gate__c.Expected_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign_Gate__c.Actual_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign_Gate__c.Is_Campaign_Completed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Phase_Gate_Due</name>
                <type>Task</type>
            </actions>
            <offsetFromField>Campaign_Gate__c.Expected_Date__c</offsetFromField>
            <timeLength>33</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Past due date notification to Campaign Phase owner</fullName>
        <actions>
            <name>Phase_Gate_Due</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Campaign_Gate__c.Expected_Date__c</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign_Gate__c.Actual_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <description>When Expected Date of the Campaign Phase is TODAY and Actual Date in NULL</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Phase_Gate_Due</fullName>
        <assignedToType>owner</assignedToType>
        <description>Tollgate was scheduled to be completed yesterday.</description>
        <dueDateOffset>1</dueDateOffset>
        <notifyAssignee>true</notifyAssignee>
        <offsetFromField>Campaign_Gate__c.Expected_Date__c</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Phase Gate Due</subject>
    </tasks>
</Workflow>
