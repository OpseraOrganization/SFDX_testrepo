<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>michiel.crosman@honeywell.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SIP_Tickets__c.Reason_for_Request__c</field>
                <operation>notEqual</operation>
                <value>Requesting Xactly Access</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>For Auto Approval of tickets requesting Xactly Access</description>
    <emailTemplate>SIP/SIP_Approval_Needed_II</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SIP_Tickets__c.Reason_for_Request__c</field>
            <operation>equals</operation>
            <value>Requesting Xactly Access</value>
        </criteriaItems>
        <criteriaItems>
            <field>SIP_Tickets__c.Closed_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SIP_Tickets__c.Same__c</field>
            <operation>equals</operation>
            <value>Samesies</value>
        </criteriaItems>
        <criteriaItems>
            <field>SIP_Tickets__c.Approval_Submit_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Approved_Date_Populate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ticket_Status_NYR</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Approved_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Submit_Date_Populate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Closed_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ticket_Status_in_Queue</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SIP Tickets 1.0 Request Access</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Approval_Submit_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ticket_Status_Ticket_Created</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
