<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Status__c</field>
        <field>Infosys_Assessment_Reviewer__c</field>
        <field>Regional_Leader_Approver__c</field>
        <field>GCE_Ops_Approver__c</field>
        <field>Infosys_Ops_Approver__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Alert_on_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>GCE_CX_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Infosys_Ops_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Infosys_Assessment_Reviewer__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Regional_Leader_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>GCE_Ops_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Regional_CX_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>SR Approval Process</label>
        <name>SR_Approval_Process</name>
    </approvalStep>
    <description>approval process created for RT GCE Account Section Support Request</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>true</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_on_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Final_Status_Field_Update_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Alert_on_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Final_Status_Field_Update_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>GCE Account Section Support Request AP</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
