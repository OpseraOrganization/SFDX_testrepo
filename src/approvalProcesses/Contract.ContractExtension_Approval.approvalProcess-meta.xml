<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sales_Channels</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>ContractNumber</field>
        <field>Owner</field>
        <field>Desired_extension_duration__c</field>
        <field>AnticipatedNewContractExecutionDate__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>ContractExtenion_Update1stApprovedDate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Extension_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Contract.Contract_Extension_Number__c</field>
                <operation>equals</operation>
                <value>1</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_Extension_Duration_1__c</field>
                <operation>lessOrEqual</operation>
                <value>180</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Contract Extension 1</label>
        <name>Contract_Extension_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>ContractExtenion_Update2ndApprovedDate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Extension_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Contract.Contract_Extension_Number__c</field>
                <operation>equals</operation>
                <value>2</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_Extension_Duration_History__c</field>
                <operation>lessOrEqual</operation>
                <value>180</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Contract Extension 2</label>
        <name>Contract_Extension_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>ContractExtenion_Update3rdApprovedDate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>harriet.mountcastle-walsh@honeywell.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tim.o.mahoney@honeywell.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND (2 OR 3)) OR (4 AND 5) OR (6 AND 7)</booleanFilter>
            <criteriaItems>
                <field>Contract.Contract_Extension_Number__c</field>
                <operation>equals</operation>
                <value>3</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_extension_duration__c</field>
                <operation>lessThan</operation>
                <value>180</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_extension_duration__c</field>
                <operation>greaterOrEqual</operation>
                <value>180</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Contract_Extension_Number__c</field>
                <operation>equals</operation>
                <value>2</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_Extension_Duration_History__c</field>
                <operation>greaterThan</operation>
                <value>180</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Contract_Extension_Number__c</field>
                <operation>equals</operation>
                <value>1</value>
            </criteriaItems>
            <criteriaItems>
                <field>Contract.Desired_Extension_Duration_1__c</field>
                <operation>greaterThan</operation>
                <value>180</value>
            </criteriaItems>
        </entryCriteria>
        <label>Contract Extension 3</label>
        <name>Contract_Extension_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Contracts/ContractExtensionProcess_ApprovalAssign</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contract.RecordType</field>
            <operation>equals</operation>
            <value>Contracts</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Contract_Extension_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ContractExtenion_UpdateExtDuration</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtenion_UpdateIsTriggeredFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtenion_UpdateNumberHist</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtenion_UpdateStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtensionIsApprovalFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtensionProcess_ApprovedAlert</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ContractExtenion_UpdateIsTriggeredFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtenion_UpdateStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ContractExtensionProcess_DisapprovedAlert</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ContractExtenion_UpdateStatusSubmitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>ContractExtension_Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>ContractExtenion_UpdateStatusRecalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
