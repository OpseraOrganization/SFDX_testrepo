<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>User_VN_Name__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request External Approval</label>
        <name>Request_External_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/One_Off_Discount_Approval_NotificationCustomerNew</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>One-Off Discount</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Sub_Status__c</field>
            <operation>equals</operation>
            <value>Approved,NA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Show_in_Community_Flag__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RDF_One_off_External_Approval_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Customer_Classification_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Closed_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RDF_One_off_External_Rejection_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Customer_Classification_Reject</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Closed_Lost</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Send_email_notification_to_Case_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Show_in_Community_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Customer_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RDF_One Off Customer Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
