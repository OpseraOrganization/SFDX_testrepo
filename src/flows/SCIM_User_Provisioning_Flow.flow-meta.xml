    <formulas>
        <description>Formula to determine if a UserProvisioningRequest indicates enabling a user.</description>
        <name>EnableUser</name>
        <dataType>Boolean</dataType>
        <expression>TEXT({!UserProvisioningRequest.Operation}) == &apos;Activate&apos; || TEXT({!UserProvisioningRequest.Operation}) == &apos;Unfreeze&apos;</expression>
    </formulas>
    <formulas>
        <name>EntitlementFormula</name>
        <dataType>String</dataType>
        <expression>&apos;00e610000011hl7AAA&apos;</expression>
    </formulas>
    <formulas>
        <name>UserNameFormula</name>
        <dataType>String</dataType>
        <expression>{!User.FirstName} + {!User.LastName} + &apos;@testuserprov.org&apos;</expression>
    </formulas>
