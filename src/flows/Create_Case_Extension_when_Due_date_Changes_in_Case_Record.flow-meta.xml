    <formulas>
        <name>UpdatesWhetherGreenorRed</name>
        <dataType>String</dataType>
        <expression>If(({!varCase.RecordType.DeveloperName}== &apos;Repair_Overhaul&apos; || {!varCase.RecordType.DeveloperName}==&apos;Quotes&apos; || {!varCase.RecordType.DeveloperName}==&apos;Orders&apos; || 
{!varCase.RecordType.DeveloperName}==&apos;Internal_Escalations&apos; || {!varCase.RecordType.DeveloperName}==&apos;Returns&apos;  || {!varCase.RecordType.DeveloperName}==&apos;ReturnsPRO&apos;), 
IF(AND(NOT(ISBLANK( {!varCase.TSLI_DateTime__c})) , NOT(ISBLANK({!varCase.Due_Date__c}))),(IF(AND(({!varCase.RecordType.DeveloperName} == &apos;Repair_Overhaul&apos;|| 
{!varCase.RecordType.DeveloperName} == &apos;Returns&apos; ||  {!varCase.RecordType.DeveloperName} == &apos;ReturnsPRO&apos; || {!varCase.RecordType.DeveloperName} == &apos;Quotes&apos;),
(NOW() - {!varCase.TSLI_DateTime__c})*24 &lt; 24), &apos;&apos;,(IF(AND({!varCase.RecordType.DeveloperName} == &apos;Orders&apos;,(NOW() - {!varCase.TSLI_DateTime__c})*24 &lt; 12),
&apos;&apos;,(IF(AND({!varCase.RecordType.DeveloperName}  == &apos;Internal_Escalations&apos;,(NOW() - {!varCase.TSLI_DateTime__c})*24 &lt; 8),&apos;&apos;,
&apos;Cust Comm Reqd&apos;)))))),
&apos;&apos;),&apos;&apos;)</expression>
    </formulas>
