<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <decisions>
        <name>Check_outage</name>
        <label>Check outage</label>
        <locationX>751</locationX>
        <locationY>196</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>IfOutageNo</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CH_StoreCaseValues.CH_Outage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>No</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CH_StoreCaseValues.Severity__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Critical</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Updaterecords</targetReference>
            </connector>
            <label>IfOutageNo</label>
        </rules>
        <rules>
            <name>IfOutageYes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CH_StoreCaseValues.CH_Outage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Yes</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>CH_ChangeStatusandMilestoneStamps</targetReference>
            </connector>
            <label>IfOutageYes</label>
        </rules>
    </decisions>
