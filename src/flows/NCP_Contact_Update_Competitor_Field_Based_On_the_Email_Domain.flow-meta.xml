    <description>This flow will update the Competitor Field on 
1. Create
2. Update if the Email field was updated.</description>
    <formulas>
        <name>EmailDom</name>
        <dataType>String</dataType>
        <expression>UPPER(RIGHT({!Email}, LEN({!Email})-FIND(&quot;@&quot;, {!Email}) + 1))</expression>
    </formulas>
    <formulas>
        <name>EmailDomain</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT(SUBSTITUTE({!Email}, LEFT({!Email}, FIND(&quot;@&quot;, {!Email})), NULL),FIND(&quot;.&quot;, SUBSTITUTE({!Email}, LEFT({!Email}, FIND(&quot;@&quot;, {!Email})), NULL))-1))</expression>
    </formulas>
    <formulas>
        <name>IndividualDomain</name>
        <dataType>String</dataType>
        <expression>&apos;@&apos; &amp; (LEFT({!DomainList},FIND(&quot;;&quot;,{!DomainList})-1))</expression>
    </formulas>
    <formulas>
        <name>RemainingDomainFormula</name>
        <dataType>String</dataType>
        <expression>TRIM((RIGHT({!DomainList},LEN({!DomainList})-FIND(&quot;;&quot;,{!DomainList}))))</expression>
    </formulas>
