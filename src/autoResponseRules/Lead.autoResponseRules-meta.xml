<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>Empty Lead Autoresponse Rule</fullName>
        <active>true</active>
    </autoResponseRule>
    <autoResponseRule>
        <fullName>First Lead Auto Response Rule</fullName>
        <active>false</active>
        <ruleEntry>
            <criteriaItems>
                <field>Lead.Account_Name__c</field>
                <operation>startsWith</operation>
                <value>Ops</value>
            </criteriaItems>
            <senderEmail>rajeswar@opsera.io</senderEmail>
            <senderName>Testing</senderName>
            <template>unfiled$public/CH_CaseCreatedOutboundAll</template>
        </ruleEntry>
        <ruleEntry>
            <criteriaItems>
                <field>Lead.Is_Owner__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <senderEmail>rajeswar@opsera.io</senderEmail>
            <senderName>Testing</senderName>
            <template>unfiled$public/CH_ActiveCaseAssignment</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>